dane1 <- read.csv(file="C:/Users/LENOVO/Desktop/Podstawy Programowania w R/data.csv", header=TRUE, sep=",")

dane1

lista<-seq(1,length(dane1$value),4)
nowe<-dane1$value[lista]
K<-100

diffs <- list()
for(i in seq_along(nowe)) {
  diffs[[i]] <- nowe[i] - nowe
  diffs[[i]] <- diffs[[i]][diffs[[i]] <= K]
}