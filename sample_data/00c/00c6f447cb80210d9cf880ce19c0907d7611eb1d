#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <time.h>
int main()
{
	float a=0.0f, b=0.0f, dlugosc_przedzialu, suma=0.0f;
	int liczba_prob=1000000;
	
	printf("Program oblicza pole pod wykresem sinusa dla zadanego przedzialu.\nPodaj poczatek przedzialu: "); scanf("%f", &a);
	printf("Podaj koniec przedzialu: "); scanf("%f", &b);
	
	if(a >= b)
	{
		printf("Podany przedzial jest niepoprawny.");
		return 0;
	}

	dlugosc_przedzialu=b-a;	
	srand(time(NULL));
	for(int i=0; i<liczba_prob; i++)
	{
		float sinus = sin(a+((double)rand()/(double)(RAND_MAX) )*dlugosc_przedzialu);
		if(sinus >= 0) suma += sinus;
		else suma -= sinus;
	}

	printf("Wynik to: %f", (suma*dlugosc_przedzialu)/liczba_prob);
	return 0;
}