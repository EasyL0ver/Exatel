using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace sobota2
{
    class Program
    {
        static void Main(string[] args)
        {
            int n; float a, srednia = 0; bool b;
            do
            {
                Console.WriteLine("podaj n");
                b = int.TryParse(Console.ReadLine(), out n);
                if (!b) Console.WriteLine("Error konwersji");
            }
            while (!b);
           
            for (int i = 1; i <= n; i++)
            {
                do
                {
                    Console.Write("podaj liczbe {0}: ", i);
                    b = float.TryParse(Console.ReadLine(), out a);
                    if (!b) Console.WriteLine("Error konwersji");
                }
                while (!b);
                srednia = (srednia * (i - 1) + a) / i;
            }
            srednia = srednia / n;
            Console.WriteLine("srednia {0} liczb={1}", n, srednia);
            Console.ReadKey();
        }
    }
}