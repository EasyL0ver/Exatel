<?php
if(isset($_POST['addbd'])){
$copy=$_POST['copy'];
$query=mysqli_query($db,"select copy from book_outward WHERE bookid like 'B1'");
while ($row=mysqli_fetch_array($query)){
$copyid=$row['copy'];
}
$copy=explode(",",$copy);
foreach ($copy as $value){
if($value==$copyid) echo "Already Exists";
else echo "Entry Applicable";
}}
?>
	
<form method="post">
<input type="text" name="copy[]" autofocus="autofocus" />
<input name="addbd" type="submit" value="Check">
</form>