import java.util.Scanner;

public class Main{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        System.out.println("Podaj login:");
        String login = in.nextLine();
        System.out.println("Podaj hasło:");
        String haslo = in.nextLine();

        if (login.equalsIgnoreCase("Tomek") && haslo.equalsIgnoreCase("Kowalski"))
            System.out.println("Konto odblokowane");
        else if (login.equalsIgnoreCase("Tomek") && !haslo.equalsIgnoreCase("Kowalski"))
            System.out.println("Niepoprawne hasło");
        else if (!login.equalsIgnoreCase("Tomek") && haslo.equalsIgnoreCase("Kowalski"))
            System.out.println("Niepoprawny login");
        else (!login.equalsIgnoreCase("Tomek") && !haslo.equalsIgnoreCase("Kowalski"))
            System.out.println("Niepoprawne hasło i login");
    }
}