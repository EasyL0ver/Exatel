#include <stdio.h>
#include <math.h>

int temp, k;
int cnt = 0;
int STOOGE_SORT(int A[], int pocetak, int kraj)
{
    cnt++;
    printf("%d\n",cnt);
    
    if (A[pocetak] > A[kraj])
    {
        temp = A[pocetak];
        A[pocetak] = A[kraj];
        A[kraj] = temp;
    }
    if ((pocetak + 1) >= kraj)
        return 0;
    k = floor((float)(kraj - pocetak + 1) / (float)3);    //Zaokruzuje na prvi manji cijeli
    //k = ceil((float)(kraj - pocetak + 1) / (float)3);     //Zaokruzuje na prvi veci cijeli
    
    STOOGE_SORT(A, pocetak, kraj - k);     //Sortira prve dvije trecine
    STOOGE_SORT(A, pocetak + k, kraj);    //Sortira druge dvije trecine
    STOOGE_SORT(A, pocetak, kraj - k);    //Sortira opet prve dvije trecine
}

int main()
{
    int a[7] = {8, 1, 6, 2, 4, 2, 5};
    //int b[7] = {8, 6, 5, 4, 2, 2, 1};
    int pocetak, kraj, i;
    pocetak = 1;
    kraj = 7;
    
    STOOGE_SORT(a, pocetak-1, kraj-1);   //Mora se oduzeti 1, jer indeksi krecu od 0
    
    for(i = 0; i < 7; i++)
    {
        printf("%d", a[i]);
    }
    
    return 0;
}