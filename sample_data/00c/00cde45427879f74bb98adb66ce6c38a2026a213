 //draws a line
 public static void drawRow() {
  for (int row = 1; row <= 1; row++) {
   for (int equal = 1; equal <= 7 * SUB_HEIGHT; equal++) {
    System.out.print("=");
   }
   System.out.println();
  }
 }
 //gets todays date


 //draws a single row of a single day       
 public static void singular() {
  for (int pipe = 1; pipe <= 1; pipe++) {
   System.out.print("|");
  }
  for (int space = 1; space <= .9 * SUB_HEIGHT; space++) {
   System.out.print(" ");
  }
 }
 //draws pipes with no numbers
 public static void full() {
  for (int row = 1; row <= SUB_HEIGHT * .3; row++) {
   singular();
   singular();
   singular();
   singular();
   singular();
   singular();
   singular();
   for (int pipe = 1; pipe <= 1; pipe++) {
    System.out.print("|");
   }
   System.out.println();
  }
  for (int row = 1; row <= SUB_HEIGHT * .1; row++) {
   singular();
   singular();
   singular();
   singular();
   singular();
   singular();
   singular();
   for (int pipe = 1; pipe <= 1; pipe++) {
    System.out.print("|");
   }
   System.out.println();
  }

 }
 //makes first row of week 1
