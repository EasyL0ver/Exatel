  System.out.println("Day: 5");
 }

 //draws week 1
 public static void drawWeek1() {
  drawRow();
  Num1();
  full();
 }
 //draws week 2
 public static void drawWeek2() {
  drawRow();
  Num2();
  full();
 }
 //draws week 3
 public static void drawWeek3() {
  drawRow();
  Num3();
  full();
 }
 //draws week 4
