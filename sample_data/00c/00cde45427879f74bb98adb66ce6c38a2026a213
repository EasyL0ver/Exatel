  drawRow();
  Num4();
  full();
 }
 //draws week 5
 public static void drawWeek5() {
  drawRow();
  Num5();
  full();
 }
 public static void drawMonth() {
  drawWeek1();
  drawWeek2();
  drawWeek3();
  drawWeek4();
  drawWeek5();
  drawRow();
 }
 //asks for user input and displays it
 public static void displayDate() {

  Scanner user_input = new Scanner(System.in);

  String chosen_month;
  System.out.print("What month would you like to look at? (MM)");
  chosen_month = user_input.next();

  String chosen_day;
  System.out.print("What day would you like to look at? (DD)");
  chosen_day = user_input.next();

  String date;
  date = chosen_month + "/" + chosen_day;

  System.out.println(date);
  System.out.println();
  System.out.println("                " + chosen_month);
 }
