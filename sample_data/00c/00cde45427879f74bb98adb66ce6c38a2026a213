 public static final int SUB_HEIGHT = 5;
 public static final int TREE = 6;
 public static final int WEEK_DAYS = 7;
 public static final int MONTH_DAYS = 31;

 //main string
 public static void main(String[] args) {
  Ascii();
  System.out.println();
  displayDate();
