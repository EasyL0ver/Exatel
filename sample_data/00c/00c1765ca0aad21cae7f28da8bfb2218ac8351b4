if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi
stty icrnl # eto isprawłjajet oszibku, kogda nażimajesz ctrl+d iłi enter, a w tjerminał otprawłjajetsja kakoj-to simwoł wmjesto djejstwija

setopt HIST_IGNORE_ALL_DUPS # nje zapisywat odinakowyje zapisi w istoriju
setopt no_beep # nje wydawat nikakoj zwuk pri oszibkje
setopt IGNOREEOF # nje zakrywat wkładku/okno po nażatiju ctrl+d
unsetopt inc_append_history # otkłjuczajet zapis w istoriju srazu posłje wwjedjenija komandy, prigoditsja jesłi wam nużno, cztoby w każdom oknje/wkładkje była swoja istorija, no pri otkrytii nowoj on brał obszczuju.

bindkey '^[^[[A' up-line-or-search # piszjem słowo, naprimjer ssh, nażimajem strjełku wwjerch, on iszczjet po istorii komandy
bindkey '^[^[[B' down-line-or-search # tożje samoje dłja strjełki wniz.


alias j='fasd_cd' # fasd - udobnaja nawigacija po dirjektorijam, wmjesto fasd_cd piszjem j