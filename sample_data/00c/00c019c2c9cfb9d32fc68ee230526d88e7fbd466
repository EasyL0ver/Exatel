#!/usr/bin/env ruby

require 'logger'
require_relative 'translating'

Log = Logger.new(STDOUT)
Log.level = Logger::DEBUG

include Translating
length = (ARGV && !ARGV.empty? ? ARGV[0].to_i : nil)

if !length
	puts trl("Please enter the distance to cover: ")
	length = gets.to_i
end

if length
	msg = trl("You need %i post(s) with %icm free space between them.\n")
	n = length/70
	d = (length - (10 * n) ) / (n + 1)
	puts format(msg, n, d)
else
	usage = __FILE__.dup << " [length in cm]"

	puts trl("\n\tMissing the length of the structure!\n\tPSE call this script as follows\n user@machine:%s" %usage)
end

puts trl("Hit return to close this window")

wait_for_return = gets