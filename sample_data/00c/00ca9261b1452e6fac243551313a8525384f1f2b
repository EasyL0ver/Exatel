var directionsService = new google.maps.DirectionsService(); 

function sendRequest(fromAddress, toAddress, locale) {
    var request = {
        origin: fromAddress,
        destination: toAddress,
        travelMode: google.maps.DirectionsTravelMode.DRIVING
    };
    directionsService.route(request, function (result, status) {
        if (status == google.maps.DirectionsStatus.OK) {
            getdistance(result);
        }
    }); 
}

function getdistance(directionResult) {
   var myRoute = directionResult.trips[0].routes[0];
   var myDistance = myRoute.distance;
   var strDistanceOrigin = myDistance.text; // text in origin units
   var nDistance = myDistance.value; // number in meters

   //do here what you need

}