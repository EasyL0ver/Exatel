const int switchPin = 2; //Allowing the switch directions with switch
const int motor1Pin = 3; //Motor pin
const int motor2Pin = 4;
const int enablePin = 9; // Enabling the switch from High to LOW of the two motor pins
void setup() {
  Serial.begin(9600);
  pinMode(switchPin,INPUT); // INPUT is the switch button

  pinMode(motor1Pin, OUTPUT);
  pinMode(motor2Pin, OUTPUT);
  pinMode(enablePin, OUTPUT);

  digitalWrite(enablePin, HIGH);  //Starting the Motor
}

void loop() {
  if(digitalRead(switchPin)==HIGH){ //if the switch is High then make the one motor pin high and the other low
   analogWrite(enablePin,150);
    digitalWrite(motor1Pin,LOW);

    digitalWrite(motor2Pin,HIGH);
   
  }
  else{
    digitalWrite(motor1Pin,HIGH); //else make one motor pin low and other high
    digitalWrite(motor1Pin,LOW);
  }

}