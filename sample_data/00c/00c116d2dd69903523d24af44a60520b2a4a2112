/script if GetUnitName("target")==nil then TargetNearestEnemy() end
/run if not buffed("Hunter's Mark",'target') then cast("Hunter's Mark");end
/script if UnitExists("target") then if a==0 then PetAttack(target) a=1 else if UnitExists("pettarget") and UnitIsUnit("target", "pettarget") then PetFollow("Yuqq") a=0 else PetAttack(target) end;end; else PetFollow("Yuqq") a=0 end;