#include<stdio.h>
void main ()
	{
		int kira;
		for(kira=0; kira<6; kira++)
			{	
		char c1, c2, c3;
		int co1, co2, multi, ans;

		printf("Kalkulator Perintang\n\n");

		printf("<H> Hitam\n");
		printf("<C> Coklat\n");
		printf("<M> Merah\n");
		printf("<J> Jingga\n");	
		printf("<K> Kuning\n");
		printf("<I> Hijau\n");
		printf("<B> Biru\n");	
		printf("<U> Ungu\n");
		printf("<G> Kelabu\n");
		printf("<P> Putih\n");
		
		
		do
		{
		printf("\nWarna Pertama :>");
		scanf("%c", &c1);
		getchar();
		}while(c1 != 'H' && c1 != 'C' && c1 != 'M' && c1 != 'J' && c1 != 'K' && c1 != 'I' && c1 != 'B' && c1 != 'U' && c1 != 'G' && c1 != 'P');
				
			if(c3=='H')	co1=0;
			else if(c3=='C')	co1=1;
			else if(c3=='M')	co1=2;
			else if(c3=='J')	co1=3;
			else if(c3=='K')	co1=4;
			else if(c3=='I')	co1=5;
			else if(c3=='B')	co1=6;
			else if(c3=='U')	co1=7;
			else if(c3=='G')	co1=8;
			else if(c3=='P')	co1=9;
		do
		{
		printf("Warna Kedua :> ");
		scanf("%c", &c2);
		getchar();
		}while(c2 != 'H' && c2 != 'C' && c2 != 'M' && c2 != 'J' && c2 != 'K' && c2 != 'I' && c2 != 'B' && c2 != 'U' && c2 != 'G' && c2 != 'P');
		
			if(c3=='H')	co1=0;
			else if(c3=='C')	co2=1;
			else if(c3=='M')	co2=2;
			else if(c3=='J')	co2=3;
			else if(c3=='K')	co2=4;
			else if(c3=='I')	co2=5;
			else if(c3=='B')	co2=6;
			else if(c3=='U')	co2=7;
			else if(c3=='G')	co2=8;
			else if(c3=='P')	co2=9;

		do
		{
		printf("Warna Ketiga :> ");
		scanf("%c", &c3);
		getchar();
		}while(c3 != 'H' && c3 != 'C' && c3 != 'M' && c3 != 'J' && c3 != 'K' && c3 != 'I' && c3 != 'B' && c3 != 'U' && c3 != 'G' && c3 != 'P');
		
				if(c3=='H')	
					{
						multi=1;
					}
				else if(c3=='C')	
					{
						multi=10;
					}
				else if(c3=='M')	
					{
						multi=100;
					}
				else if(c3=='J')	
					{
						multi=1000;
					}
				else if(c3=='K')	
					{
						multi=10000;
					}
				else if(c3=='I')	
					{
						multi=100000;
					}
				else if(c3=='B')	
					{
						multi=1000000;
					}
				else if(c3=='U')	
					{
						multi=10000000;
					}
				else if(c3=='G')	
					{
						multi=100000000;
					}
				else if(c3=='P')	
					{
						multi=1000000000;
					}
				
				ans= co2 * multi;
				printf("The value of resistor is %d %d\n\n",co1,ans);					
			}
			

				
	}