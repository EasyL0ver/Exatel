using System;
class Program
{
    static void Main()
    
    {
        Console.WriteLine("Введите первое число епт:");
        int x = int.Parse(Console.ReadLine());
        Console.WriteLine("Введите второе число епт:");
        int y = int.Parse(Console.ReadLine());
        Console.Clear();
        string sukaa = (+ x  + " "  + y);
        int summa = x + y; //сумма
        int diff = x - y; // разность
        int proizv = x * y; // произведение
        double dell = x / y; //деление
        int ost = y % x; // остаток
        bool rezult;
        int chetn = x % 2;
        rezult = (chetn == 0);
        bool rezult1;
        int nechetn = y % 2;
        rezult1 = (nechetn == 1);
        bool rezult2;
        rezult2 = (x == y);
 
        Console.WriteLine("Введенные числа:  " + sukaa); 
        Console.WriteLine("их сумма:  " + summa);
        Console.WriteLine("разность первого и второго:  " + diff);
        Console.WriteLine("их произведение:  " + proizv);
        Console.WriteLine("первое делим на второе  " + dell);
        Console.WriteLine("остаток от деления второе на первое  " + ost);
        Console.WriteLine("\n");
        Console.WriteLine("первое число четное  " + rezult);
        Console.WriteLine("второе число нечетное  " + rezult1);
        Console.WriteLine("равны ли числа? (True- равны, False- не равны)" + rezult2);


        Console.WriteLine("\n");
        Console.ReadKey();

        
        
    }
}