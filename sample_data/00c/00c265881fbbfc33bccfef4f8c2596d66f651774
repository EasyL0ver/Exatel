#include <iostream>

int main()
{
    float inp1; // Answer to first question (ADD?) // 
    float inp2; // Answer to second question (MULTIPLY?) // 
    float inp3; // Answer to third question (DIVIDE?) // 
    float inp4; // Answer to third question (SUBTRACT?) // 

    float num1; // First number user inputs //  
    float num2; // Second number user inputs // 



    std::cout << "Welcome to the calculator, please enter two numbers: \n";
    std::cin >> num1; // First number, assigned to "inp1" variable // 
    std::cin >> num2; // Second number, assigned to the "inp2" variable // 

    std::cout << "Would you like to add these numbers? Y(1)/N(2)\n";
    std::cin >> inp1; // ANSWER OF Y(1) OR N(2) FOR INP1 // 

    if (inp1 == 1) { // INP1 TRUE (Y) // 
        std::cout << "Your numbers added equal " << num1 + num2 << "\n";
    }

    else if (inp1 == 2) { // INP1 FALSE (N) // 
        std::cout << "Would you like to multiply them by eachother? Y(1)/N(2) \n";
        std::cin >> inp2; // ANSWER OF Y(1) OR N(2) FOR INP2 // 
    }

    if (inp2 == 1) { // INP1 TRUE (Y) // 
        std::cout << "Your numbers multiplied is: " << num1 * num2 << "\n";
    }

    else if (inp2 == 2) { // INP2 FALSE (N) // 
        std::cout << "Would you like to divide them by eachother? Y(1)/N(2) \n";
        std::cin >> inp3; // ANSWER OF Y(1) OR N(2) FOR INP3 // 
    }

    if (inp3 == 1) {
        std::cout << "Your numbers divided by eachother is: " << num1 / num2 << "\n";
    }

    else if (inp3 == 2) {
        std::cout << "Would you like to subtract them by eachother? Y(1)/N(2) \n";
        std::cin >> inp4; // ANSWER OF Y(1) OR N(2) FOR INP4 // 
    }

    if (inp4 == 1) {
        std::cout << "Your numbers subtracted by eachother is: " << num1 - num2 << "\n";
    }
    else if (inp4 == 2) {
        std::cin.get(); // END OF OPTIONS // 
    }

}