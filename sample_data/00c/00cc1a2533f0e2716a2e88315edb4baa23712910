#include <bits/stdc++.h>
using namespace std;

#define fastio ios_base::sync_with_stdio(false), cin.tie(nullptr)

typedef pair<int, int> ii;

multiset<ii> st;

int main()
{
	fastio;
  int n, k, a;
  cin >> n >> k;

  for(int i=0;i<n;i++)
  {
    cin >> a;
    if(st.size()<k)st.insert({a, i+1});
    else
    {
      if(a>=st.begin()->first)
      {
        st.erase(st.begin());
        st.insert({a, i+1});
      }
    }
  }

  int ans=0;

  vector<int> temp;

  for(auto x:st)
  {
    ans+=x.first;
    temp.push_back(x.second);
  }

  sort(temp.begin(), temp.end());

  printf("%d\n", ans);

  if(temp.size()==1)printf("%d\n", n);
  else
  {

    for(int i=0;i<k;i++)
    {
      if(i==0)
      {
        printf("%d ",temp[i]);
      }
      else if(i==k-1)
      {
        printf("%d ",n-temp[i-1]);
      }
      else
      {
        printf("%d ", temp[i]-temp[i-1]);
      }
    }
  }
  printf("\n");
}