public class FastBan extends JavaPlugin {

	Logger log = Logger.getLogger("Minecraft");
	 
	public void onEnable(){
		log.info("[FastBan] FastBan v1.0 has been enabled!");
	}
 
	public void onDisable(){
		log.info("[FastBan] FastBan v1.0 has been disabled.");
	}
	
	public boolean onCommand(CommandSender sender, Command cmd, String commandLabel, String[] args){
		if(cmd.getName().equalsIgnoreCase("FB")){ 
			sender.sendMessage(ChatColor.GOLD + "-----FastBan v1.0 by RobotA69-----");
			sender.sendMessage(ChatColor.AQUA + "===[Command List]===");
			sender.sendMessage("/k [player] [reason] = Simple kick command!");
			sender.sendMessage("/b [player] [reason] = Simple ban command!");
			sender.sendMessage(ChatColor.GOLD + "More commands coming soon!");
			return true;
		} 
       if(cmd.getName().equalsIgnoreCase("k")){
    	   String name = args[0];
    	   Player target = Bukkit.getServer().getPlayer(name);
    	   target.kickPlayer(ChatColor.RED + "You have been kicked for " + args[1]);
    	   Bukkit.getServer().broadcastMessage(args[0] + " has been kicked for " + args[1]);
    	   return true;
       }
	   if(cmd.getName().equalsIgnoreCase("b")){
		   String name = args[0];
    	   Player target = Bukkit.getServer().getPlayer(name);
    	   target.setBanned(true);
    	   target.kickPlayer(ChatColor.RED + " You have been banned for " + args[1]);
           Bukkit.getServer().broadcastMessage(args[0] + " has been banned for " + args[1]);
           return true;
       }
       return false;
	}
}