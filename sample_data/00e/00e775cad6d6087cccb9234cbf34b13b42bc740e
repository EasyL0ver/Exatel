package allat;

public class allat {

    public static void main(String[] args) {

        int days = 6;
        int[] values = {10000, 10000, 10000, 15000,15000,17000};
        int value = values[0];
        int counter = 1;
        
        for (int i = 0; i < days -1; i++)
        {
            if (value != values[i + 1])
            {
                value = values[i + 1];
                counter++;
            }
        }
        System.out.println(counter);
  }
}