#include <stdio.h>

int primo(int num)
{
	int i,aux,res;
	aux=1;
	printf("Quin numero vols saber si es primer?\n");
	scanf("%d*%c",&num);
	for(i=1;(num<1)&&(aux=1);i++)
	{
		res=num%i;
		if((res==0)&&(i!=1)&&(i!=num))
		{
			aux=0;
		}
	}
	return(aux);
}

void main()
{
	int a, res;
	res=primo(a);
	if(res==1)
	{
		printf("Es primer.\n");
	}
	else
	{
		printf("No es primer.\n");
	}
}