'use strict';

var buttonRock = document.getElementById('rock').getElementsByTagName('button')[0];;
var buttonPaper = document.getElementById('paper').getElementsByTagName('button')[0];;
var buttonScissor = document.getElementById('scissor').getElementsByTagName('button')[0];;

//Prawdopodobnie działa - pytanie czy jest sens takiego zastosowania - w tym konkretnym wypadku lepiej gdybyś po prostu na buttony nałozył odpowiednie ID. 
//Skróciło by nam to wtedy zapis i wystarczyło by np. po prostu: var buttonRock = document.getElementById('rock')

var output = document.getElementById('output');
output.innerHTML = 'GAME RESULTS' + '<br><br>';

buttonPaper.addEventListener('click', function(){
  playerMove('paper');
}); 
buttonRock.addEventListener('click', function(){
  playerMove('rock');
}); 
buttonScissor.addEventListener('click', function(){
  playerMove('scissor');
}); 

//tutaj jeszcze jak najbardziej ok!

 function comMove (){
   var num =  Math.floor((Math.random() * 3) + 1); 
   return num;
 }

//Tutah byłoby lepiej gdyby stworzyć tablicę var ruch = [opcja1,opcja2,opcja3] i po prostu zwracać "return ruch[num]" zeby zwracało konkretny ruch, u Ciebie zwraca liczbę i jest to trudne do odczytania potem

function playerMove (moveName){
  var output = document.getElementById('output');
 
  var comChoice = comMove();

//i tutaj powinien kończyć się playterMove. Twoje dwie zmienne powinny być przekazywane do funkcji która sprawdzi zwycięzce. Założenie jest takie żeby rozbijać kod który możemy na mniejsze "cegiełki"

  
  if (moveName == 'rock' && comChoice == 1) {
    output.innerHTML ='YOU LOSE your choice was rock Computer chose Paper!';
  }
  if (moveName == 'rock' && comChoice == 2) {
    output.innerHTML ='ITs a TIE!';
  }
  if (moveName == 'rock' && comChoice == 3) {
    output.innerHTML ='YOU WIN you chose Rock Computer chose Scissors!';
  }
  if (moveName == 'paper' && comChoice == 1) {
    output.innerHTML ='ITs a TIE!';
  }
  if (moveName == 'paper' && comChoice == 2) {
    output.innerHTML ='YOU WIN you chose Paper Computer chose Rock!';
  }
  if (moveName == 'paper' && comChoice == 3) {
    output.innerHTML ='YOU LOSE your choice was Paper Computer chose Scissors!';
  }
  if (moveName == 'scissor' && comChoice == 1) {
    output.innerHTML ='YOU WIN you chose Scissors Computer chose Paper!';
  }
  if (moveName == 'scissor' && comChoice == 2) {
    output.innerHTML ='YOU LOSE your choice was Scissors Computer chose Rock!';
  }
  if (moveName == 'scissor' && comChoice == 3) {
    output.innerHTML ='ITs a TIE!';
  }
}

//Ladnie to rozpisales - ale zastanówmy się czy jest potrzebna pełna informacja. Czy nie wystarczyło by wygrałeś lub przegrałeś po prostu? Wtedy mógłbyś to pozamykać w mniej ifów i dać np. if ( sytuacjaJeden || sytuacjaDwa || sytuacjaTrzy ) { przegrales }