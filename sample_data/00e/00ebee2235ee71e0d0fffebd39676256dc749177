#include <vcl.h>
#pragma hdrstop

#include <tchar.h>
#include <iostream.h>
#include <conio.h>
#include <stdlib.h>
#include <windows.h>
//---------------------------------------------------------------------------

#pragma argsused
void FestTpr(char a[],char A[]);


int _tmain(int argc, _TCHAR* argv[])
{
SetConsoleCP(1251);
SetConsoleOutputCP(1251);
int c;
char a[8]={'\0'},b[8]={'\0'},A[8]="00000000",B[8]="00000000";
cout<<"Введите двуричное число 'а' в естественной форме: ";
gets(a);
cout<<"Введите двуричное число 'b' в естественной форме: ";
gets(b);

FestTpr(a,A);

cout<<endl;
puts(A);

FestTpr(b,B);
cout<<endl<<B;


getch();
	return 0;
}




void FestTpr(char a[],char A[]){
int i=0;
if (a[0]=='-') {
	A[0]='1';
}
else A[0]='0';

if (a[0]=='+'||a[0]=='-') i++;

int dl=strlen(a);
for (i;a[i]!='\0'; i++) {
A[8-dl+i]=a[i];
}



}


