document.addEventListener("DOMContentLoaded",function()
{

var nextButton = document.getElementById("nextPicture");
var prevButton = document.getElementById("prevPicture");

var parentElement = document.querySelector(".slider");
var listItems = parentElement.children;
var listItemsArray = [];
for(var i = 0; i < listItems.length; i++)
{
	listItemsArray.push(listItems[i].innerHTML);
}
console.log(nextButton);
console.log(prevButton);

console.log(listItemsArray);
});