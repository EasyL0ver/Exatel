#include <stdio.h>
#include <stdlib.h>

int szukaj(int *t, int n, int a)
{
if(t[n]==a) return 1;
if(n==0) return 0;
else return szukaj(t,n-1,a);

}
int main()
{
    int a,n=5;
    int t[5]={1,5,4,2,4};
    int *p=t;

    printf("Podaj liczbe, ktora chcesz sprawdzic czy wystepuje w tablicy:"); scanf("%d",&a);

    printf("%d",szukaj(p,n,a));



   return 0;
}