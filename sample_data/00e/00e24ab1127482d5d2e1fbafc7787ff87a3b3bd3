#include <iostream> 
#include <fstream>
#include <iomanip>
 
using namespace std; 
 
int main() { 
	setlocale (LC_ALL, "RUS");
    
	int n = 0; 
    int num[100]; 
    
    ifstream f("in.txt"); 
    
    while (f >> num[n]) ++n; 
    
    for (int i = 0; i < n; i++) 
	{
		cout << "Число [" << i + 1 << "] = " << num[i] << endl;


		ofstream g;
		g.open("out.txt");
		
			if(num[i] % 2 == 0)
			{
				g << num[i] << " - Четное" << endl;
			}
	    
		for (int k = 0; k < n; k++) 
		{
			if(num[k] % 2 != 0) 
			{
				g << num[k] << " - Нечетное" << endl;
			}
		}
	
	g.close();
	f.close();
	}
	
	cout << endl;	
	cout << "Проверяйте файл out.txt" << endl;
	return 0;
}