$user=Auth::user();
$eventos = $user->eventoAsistencias()->with('categorias');
if(Input::get('cat','')!=''){
            $eventos = $eventos->whereHas('categorias', function($q) {
                $cat = Input::get('cat','');
                if($cat !== '' || !empty($cat)){
                    $q->whereIn('nombre',$cat); 
                }
            });
        }

return response()->json($eventos->get(),200); 
     
