#include <stdio.h>
#define PI 3.14159
#define _USE_MATH_DEFINES
#include <math.h>
#include <string.h>



struct Kreis
{
	char name[20];
	float x;
	float y;
	float rad;
	 
};

float Umfang(struct Kreis);
float Flaeche(struct Kreis);
float Abstand(struct Kreis, struct Kreis);
void Move(struct Kreis*, float, float);
struct Kreis Addiere(struct Kreis, struct Kreis);
int Overlap(struct Kreis, struct Kreis);

int main(void)
{
	struct Kreis k1;
	struct Kreis k2;
	struct Kreis k3;

	k1.rad=5.5;
	k1.x=10;
	k1.y=10;

	k2.rad=2.5;
	k2.x=20;
	k2.y=20;

	float umf=0;
	float fle=0;
	float abs=0;
	int over=0;

	printf("Erster Kreis: x=%.3f y=%.3f  radius=%.2f\n",k1.x,k1.y,k1.rad);
	printf("Zweiter Kreis: x=%.3f y=%.3f  radius=%.2f\n",k2.x,k2.y,k2.rad);

	umf=Umfang(k1);
	printf("Umfang Kreis1: %.2f\n",umf);

	fle=Flaeche(k1);
	printf("Flaeche Kreis1: %.2f\n",fle);

	abs=Abstand(k1,k2);
	printf("Abstand: %f\n",abs);

	k3=Addiere(k1,k2);
	printf("Nach Addition: X(%2.f) | Y(%2.f)\n",k3.x,k3.y);

	Move(&k1,1,0.5);
	printf("Nach Move X(%.2f) | Y(%.2f)\n",k1.x,k1.y);
	
	over=


	

}
float Umfang(struct Kreis Kreis)
{
	float Umfang;

	Umfang=2*Kreis.rad*PI;
	return Umfang;
}
float Flaeche(struct Kreis Kreis)
{
	float Fläche;

	Fläche=pow(Kreis.rad,2)*PI;
	return Fläche;
}
float Abstand(struct Kreis k1,struct Kreis k2)
{
	float absx=fabs(k1.x-k2.x);
	float absy=fabs(k1.y-k2.y);

	float abst=absx+absy;

	return abst;
}
void Move(struct Kreis* k1,float dx, float dy)
{
	k1->x=k1->x+dx;
	k1->y=k1->y+dy;
}
struct Kreis Addiere(struct Kreis k1, struct Kreis k2)
{
	struct Kreis k3;

	k3.x=((k1.x+k2.x)/2);
	k3.y=((k1.y+k2.y)/2);

	return k3;
}
int Overlap(struct Kreis k1, struct Kreis k2)
{

}