#include <stdio.h> /* biblioteca para entrada && saida de dados (stdin && stdout) */
#include <stdlib.h>
#include <time.h> /* rand() && srand */


int carga[] = {20,40,60,80,100}; /* vetor que armazena os pesos das cargas */

void show_container_a(int m1[][7]); /* prototipos das funções */
void show_container_b(int mm[][7]); /* prototipo da função do tipo void sem retorno */
void show_clientes(int mm[][7]); /* prototipo da função do tipo void com uma matriz nos parametros */


/* função main todo programaem .C tem que ter essa função nesse caso do tipo inteiro retornando o valor inteiro -> 0*/

int main(int *argc,char *argv[])
{   
    int cargas[21],clientes[21]; /* dois vetores que pode armazenar de 0 a 21 elementos */
    
    int cliente_1[21],cliente_2[21],i,j,k,l,y,m;


    int matrizA[3][7],matrizB[3][7],v[] ={1,2},matriz_clienteA[3][7];
    int matriz_clienteB[3][7];

    float distanciaInicialA;



    int sn,r,v1[] = {2,0};

    do
    {
        srand(time(NULL));

        for(j=0; j <3; j++)
        {

            for(i=0; i < 7; i++)
            {        
                matrizA[j][i] = carga[rand() %5];

                if (i >=6)
                {
                    for(y=0; y <3; y++)
                    {
                        for(l=0; l <7; l++)
                            matriz_clienteA[y][l] = v[rand() %2];
                    }
                }
            }
        }
        for(i=0; i <3; i++)
        {
            for(j=0; j <7; j++){
                if (matriz_clienteA[i][j] == 2)
                {
                    matriz_clienteB[i][j] = carga[rand() %5];
                }else if (matriz_clienteA[i][j] == 1)
                {
                    matriz_clienteB[i][j] =0;
                }
            }
        }
        

        printf("\n\t 0 para encerrar \n\n");
        scanf("%d",&sn);     

    }while(sn !=0);


    return 0;

}

void show_container_a(int mm[][7])
{
    int k,l;
    
    for(l=0; l <3; l++)
    {
        for(k=0; k <7;k++)
            printf("\t %3d ",mm[l][k]);
        
        putchar('\n');
    }
}

void show_container_b(int mm[][7])
{
    int j,i;

    for(i=0; i <3; i++)
    {
        for(j=0;j <7; j++)
            printf("\t %3d ",mm[i][j]);
        
        putchar('\n');
    }
}


void show_clientes(int m1[][7])
{
    int j,l;
    
    for(j=0; j <3; j++)
    {
        for(l=0; l <3; l++)
            printf("\t %3d ",m1[j][l]);
        
        putchar('\n');
    }
}