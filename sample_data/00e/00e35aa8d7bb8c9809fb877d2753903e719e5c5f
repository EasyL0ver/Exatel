public void pickShieldType(){
		boolean flag = true;
		if(flag){
			sh = rand.nextInt(3);
			flag = false;
		}
		
        if(sh == 0){
        	heldShield = setShield(0,mod_HumansPlus.shieldRedMotif);
        }
        if(sh == 1){
        	heldShield = setShield(0,mod_HumansPlus.shieldBlueMotif);
        }
        if(sh == 2){
        	heldShield = setShield(0,mod_HumansPlus.shieldYellowMotif);
        }
	}