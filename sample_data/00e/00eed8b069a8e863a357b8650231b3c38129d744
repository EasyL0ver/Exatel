ZADANIE 3.8

#include <iostream>

using namespace std;

int main()
{
	int n;
	cout << "Podaj n: ";
	cin >> n;
	if (n == 1) cout << "poniedzialek" << endl;
	else if (n == 2) cout << "wtorek" << endl;
	else if (n == 3) cout << "sroda" << endl;
	else if (n == 4) cout << "czwartek" << endl;
	else if (n == 5) cout << "piatek" << endl;
	else if (n == 6) cout << "sobota" << endl;
	else if (n == 7) cout << "niedziela" << endl;
	else cout << "podano bledna wartosc" << endl;


	system("pause");
	return 0;
}

------------------------------------------------------------------
ZADANIE 3.9

#include <iostream>
#include <cmath>

using namespace std;

int main()
{
	int n, x;
	cout << "Podaj n: ";
	cin >> n;
	cout << "Podaj x: ";
	cin >> x;
	if (n == 1) cout << sqrt(2)*x << endl;
	else if (n == 2) cout << x * x*x - 5 << endl;
	else if (n == 3) cout << cos(x) + 1 << endl;
	else cout << 1 << endl;
	
	
	system("pause");
	return 0;
}

