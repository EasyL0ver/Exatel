ZADANIE 3.10

#include <iostream>
#include <ctime>
#include <iomanip>

using namespace std;
int n;
int d;
time_t czas;
class Dane
{
public:
	string imie = "Szymon";
	string nazwisko = "Szczepanowski";
	int wiek = 17;
	int wzrost = 185;
};
int main()
{
	Dane dane;
	while (n != 4)
	{
		cout << "1.Dane ucznia." << endl
			<< "2.Aktualna data." << endl
			<< "3.Algorytm realizujacy wczytywanie numeru dnia i wypisywaniu jego nazwy" << endl
			<< "4.Zakonczenie programu" << endl << endl;

		cin >> n;
		cout << endl;

		if (n == 1) 
			cout << "Imie: " << dane.imie << endl
			<< "Nazwisko: " << dane.nazwisko << endl
			<< "Wiek: " << dane.wiek << endl
			<< "Wzrost: " << dane.wzrost << endl << endl;
		else if (n == 2)
		{
			time_t czas;
			struct tm * ptr;
			time(&czas);
			ptr = localtime(&czas);
			char* data = asctime(ptr);
			cout << "Data: " << data << endl << endl;
		}
		else if (n == 3)
		{
			cout << "Podaj dzien tygodnia: ";
			cin >> d;
			cout << endl;
			if (d == 1) cout << "Poniedzialek" << endl << endl;
			else if (d == 2) cout << "Wtorek" << endl << endl;
			else if (d == 3) cout << "Sroda" << endl << endl;
			else if (d == 4) cout << "Czwartek" << endl << endl;
			else if (d == 5) cout << "Piatek" << endl << endl;
			else if (d == 6) cout << "Sobota" << endl << endl;
			else if (d == 7) cout << "Niedziela" << endl << endl;
			else cout << "Podano bledna wartosc" << endl << endl;
		}
	}
	cout << endl << "Mam nadzieje ze kiedys sie jeszcze zobaczymy :)" << endl;

	system("pause");
	return 0;
}