ZADANIE 3.7
A)
#include <iostream>

using namespace std;

int main()
{
	int a = 3, b = -2, c = 10;
	
	if (a + b > c) {
		a *= 2;
		b -= 1;
		
			if (c > 0) c += a;
			else c += b;
		}
	else c += a * b;

	cout << a << endl << b << endl << c << endl;

	system("pause");
	return 0;
}

-------------------------
B)
#include <iostream>

using namespace std;

int main()
{
	int x = 5, y = 1, z = 6;
	x += y;

	if (x > y + 1) {
		x += z;
		z--;
	}
	if (z < 3) {
		z *= x;
	}
	else {
		z *= y;
		z++;
	}

	cout << x << endl << y << endl << z;

	system("pause");
	return 0;
}

-------------------------
C)
#include <iostream>

using namespace std;

int main()
{
	int m = 5, n = 4, k = 0;

	if (m + n < k)
	{
		cout << k << endl;
	}
	else
	{
		k = m + n;

		if (m + 1 < n)
		{
			n *= 4;
			k--;
		}
		else
		{
			m *= 2;
		}
		cout << m << endl << k << endl << n;
	}


	system("pause");
	return 0;
}

