ZADANIE 3.6

#include <iostream>

using namespace std;

int main()
{
	//a

	if (a <= 0) {
		if (a == 0) m = 5;
		else m = -5;
	}

	//b

	if (a > 0) m = 0;
	else if (a < 0) m = 1;
	else m = 2;

	//c

	if (a >= 0) {
		if (a > 0) m--;
		else m++; 
	}
	else m = 0;

	//d

	if (a > 1) {
		if (a < 10) m -= 2;
		else if (a == 10);
		else m + 2 = 2;
	}
	else if (!a);
	else m = 0;

	system("pause");
	return 0;

}


