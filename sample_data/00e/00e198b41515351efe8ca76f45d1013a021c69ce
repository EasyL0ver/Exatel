#include <EdgeDebounceLite.h>
EdgeDebounceLite debounce;

int button[8] = {1,2,3,4,5,6,7,8};

void setup(){
for (int i=0; i<7; i++) {
pinMode(button[i], INPUT_PULLUP);
Serial.begin(38400);  //Comm for BT module
}}

void loop() {
for (int i=0; i<8; i++) {
if (debounce.pin(button[i]) == LOW) {
Serial.print("Button ");
Serial.print(button[i]);
Serial.println("was pressed!");
}}}