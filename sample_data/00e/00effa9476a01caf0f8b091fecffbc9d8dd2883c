#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <stdlib.h>


int main(int argc, string input[2])
{
  string Plaintext;
  string Cyphertext;
  int key = atoi(*input);
  int vector = 0;


    if(key < 0 || argc >2)
    {
        printf("Error, please introduce only one line of command argument");
        return 1;
    }
    else
    {
        printf("Message:");
        Plaintext = get_string();
    }
    //for each character of the string if its alphabetical preserve case, shift caracter by key
    while(vector != strlen(Plaintext))
    {
        if(isalpha(Plaintext[vector]))//aka is a letter
        {
          if(isupper(Plaintext[vector]))
            {
              Cyphertext = ((Plaintext[vector] - 65 + key) % 26);
              vector++;
              printf("%c", Cyphertext);
            }
           else
           {
            //cypher the letter
           Cyphertext = ((Plaintext[vector] - 97 + key) % 26);
            vector++;
            printf("%c", Cyphertext);
           }
         }
         else
         {
             printf("%c", Plaintext[vector]);
             vector++;
         }
    }
    printf("\n");
}