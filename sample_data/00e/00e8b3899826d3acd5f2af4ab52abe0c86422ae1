package gj.kalah.player.primitivo;

import java.util.Random;
import java.util.Scanner;

import gj.kalah.player.Player;

public class PrimitivoPlayer implements Player {
	private Scanner in = new Scanner(System.in);

	private Board board;
	Random rand = new Random();

	public void start(boolean isFirst) {
		board = new Board(isFirst);

	}

	public int move() {
		int n = board.generaNumero();
		System.out.println(n);
		if (board.first) {
			board.muoviPietraGiocatore(n);
		} else {
			board.muoviPietraOpponent(n);

		}
		return n;
	}
 
	public void tellMove(int m) {

		if (!board.first) {
			board.muoviPietraGiocatore(m);
		} else {
			board.muoviPietraOpponent(m);

		}
	}
}