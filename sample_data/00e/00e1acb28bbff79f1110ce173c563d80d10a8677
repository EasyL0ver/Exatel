			scanf_s( "%d", &Option );

			switch ( Option ){
				case 1:
					assembleArrayUtility02InsertNameHere();
					break;
				case 2:
					printf("\n Thank you for working on the exercise!\n" );
					break;
				default: 
					printf( "\nWRONG OPTION!\n\n" );
			}
		}while ( Option != 2 );
		return;
	}

