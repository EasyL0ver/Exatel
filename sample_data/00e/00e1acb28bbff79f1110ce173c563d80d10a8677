int* createDynamicData ( int arg ) {
	int* tempPtr;
	int i;

	tempPtr = (int* ) malloc( sizeof(int) * arg );

	for ( i = 0; i < arg; i++) { // store
		
		printf("Enter Integer Value #%d: ", i + 1);
	scanf_s( "%d", tempPtr + i);         
	}


	return tempPtr;
}