    private boolean _gotStroked;
    public Cat tom;
    public int feedCount;
    /**
     * Eine neue Katze ist hungrig und wach
     */
    public Cat(String name)
    {
        _isHungry = true;
        _gotStroked = false;
        //TODO: Konstruktor ist noch nicht fertig
        feedCount = 0;
        tom = new Cat(name);
