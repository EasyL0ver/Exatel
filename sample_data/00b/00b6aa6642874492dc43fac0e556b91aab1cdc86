#!/usr/bin/env bash

# Install Selenium on Ubuntu Server
# https://gist.github.com/ziadoz/3e8ab7e944d02fe872c3454d17af31a5
# https://developers.supportbee.com/blog/setting-up-cucumber-to-run-with-Chrome-on-Linux/
# https://gist.github.com/curtismcmullan/7be1a8c1c841a9d8db2c
# http://stackoverflow.com/questions/10792403/how-do-i-get-chrome-working-with-selenium-using-php-webdriver
# http://stackoverflow.com/questions/26133486/how-to-specify-binary-path-for-remote-chromedriver-in-codeception
# http://stackoverflow.com/questions/40262682/how-to-run-selenium-3-x-with-chrome-driver-through-terminal
# http://askubuntu.com/questions/760085/how-do-you-install-google-chrome-on-ubuntu-16-04

# Adding host 
echo $(hostname -I | cut -d\  -f1) $(hostname) | sudo tee -a /etc/hosts

# Versions
CHROME_DRIVER_VERSION=`curl -sS chromedriver.storage.googleapis.com/LATEST_RELEASE`
SELENIUM_STANDALONE_VERSION=3.12.0
SELENIUM_SUBDIR=$(echo "$SELENIUM_STANDALONE_VERSION" | cut -d"." -f-2)

# Remove existing downloads and binaries so we can start from scratch.
sudo apt-get remove google-chrome-stable -y
rm ~/selenium-server-standalone-*.jar
rm ~/chromedriver_linux64.zip
sudo rm /usr/local/bin/chromedriver
sudo rm /usr/local/bin/selenium-server-standalone.jar

# Install dependencies.
#sudo add-apt-repository ppa:mozillateam/firefox-next -y
sudo apt-get update && sudo apt upgrade -y
sudo apt-get install xorg -y
sudo apt-get install xvfb -y
sudo apt-get install libxi6 libgconf-2-4 -y
sudo apt-get install xfonts-100dpi xfonts-75dpi xfonts-scalable xfonts-cyrillic -y
sudo apt-get install ffmpeg gpac -y 
sudo apt-get install python3-pip psmisc unzip  -y
sudo apt-get install openjdk-8-jre-headless -y
sudo apt install firefox -y
sudo apt install xdg-utils -y
sudo apt install fonts-liberation -y


export LC_ALL=C
pip3 install awscli boto3

# Install Chrome.
sudo apt-get install libxss1 libappindicator1 libindicator7 -y
wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
sudo dpkg -i google-chrome*.deb
rm -rf google-chrome*.deb


# Install ChromeDriver.
wget -N http://chromedriver.storage.googleapis.com/$CHROME_DRIVER_VERSION/chromedriver_linux64.zip -P ~/
unzip ~/chromedriver_linux64.zip -d ~/
rm ~/chromedriver_linux64.zip
sudo mv -f ~/chromedriver /usr/local/bin/chromedriver
sudo chown root:root /usr/local/bin/chromedriver
sudo chmod 0755 /usr/local/bin/chromedriver

# Install GeckoDriver
wget https://github.com/mozilla/geckodriver/releases/download/v0.21.0/geckodriver-v0.21.0-linux64.tar.gz
sudo sh -c 'tar -x geckodriver -zf geckodriver-v0.21.0-linux64.tar.gz -O > /usr/local/bin/geckodriver'
sudo chmod +x /usr/local/bin/geckodriver
rm geckodriver-v0.21.0-linux64.tar.gz

# Install Selenium.
wget -N http://selenium-release.storage.googleapis.com/$SELENIUM_SUBDIR/selenium-server-standalone-$SELENIUM_STANDALONE_VERSION.jar -P ~/
sudo mv -f ~/selenium-server-standalone-$SELENIUM_STANDALONE_VERSION.jar /usr/local/bin/selenium-server-standalone.jar
sudo chown root:root /usr/local/bin/selenium-server-standalone.jar
sudo chmod 0755 /usr/local/bin/selenium-server-standalone.jar

#cronjob to run selenium
#(crontab -l 2>/dev/null; echo "@reboot /usr/bin/xvfb-run -n 99 --server-args=\"-screen 0 1360x1020x24 -ac +extension RANDR\" java -Dwebdriver.gecko.driver=/usr/local/bin/geckodriver -Dwebdriver.chrome.driver=/usr/local/bin/chromedriver -jar /usr/local/bin/selenium-server-standalone.jar -port 8080 -log /home/seluser/Perfecto/Logs/selenium_8080.log &") | crontab -

#Create Folders
sudo mkdir /home/seluser
sudo mkdir /home/seluser/Perfecto
sudo mkdir /home/seluser/Perfecto/Logs
sudo mkdir /home/seluser/Perfecto/Video
sudo mkdir /home/seluser/Perfecto/Selenium

#Change the owner for ubuntu user
sudo chown -R ubuntu /home/seluser/

#Sync Script from s3
aws s3 sync s3://web-puppet-master/LinuxScripts /home/seluser/Perfecto/Selenium

#Diet
sudo rm -rf /usr/share/doc/
sudo rm -rf /usr/share/man/
sudo rm -rf /usr/share/locale/
sudo apt-get autoclean && sudo apt-get autoremove --yes && sudo apt-get clean
sudo rm -rf ~/.cache/thumbnails/*

# /usr/bin/xvfb-run -n 99 --server-args="-screen 0 1360x1020x24 -ac +extension RANDR" java -Dwebdriver.chrome.driver=/usr/local/bin/chromedriver -Dwebdriver.gecko.driver=/usr/local/bin/geckodriver -jar /usr/local/bin/selenium-server-standalone.jar -port 8080 -log /home/seluser/Perfecto/Logs/selenium_8080.log &

#Reboot
sudo reboot