package fr.oulouloups.rank;



import org.bukkit.Bukkit;

import org.bukkit.scoreboard.Scoreboard;
import org.bukkit.scoreboard.Team;



public class Rank {

	
	private Scoreboard board;

	public void initScoreBoard() {
		if(board != null) throw new UnsupportedOperationException("le scoreboard est deja initialliser");
		this.board = Bukkit.getServer().getScoreboardManager().getNewScoreboard();
		
		for(RankList rankList : RankList.values()) {
			Team team = board.registerNewTeam(rankList.getName());
			team.setPrefix(rankList.getPrefix());
		}
	}
	
	
	public Scoreboard getScoreboard() {
		return board;
	}
	
	
	
}