import java.util.Scanner;
 
public class Sportwedstrijd {
 
	public static void main (String[] args) {
 
		Scanner scanner = new Scanner (System.in);
 
		int juryleden; //aantal juryleden
		int som; //som van de opgegeven quotaties
		som = 0; //som begint bij 0
 
		System.out.println("Geef het aantal jury leden in: ");
		juryleden = scanner.nextInt();
 
		if (juryleden > 3){     //het minimum aantal jury leden bedraagd 3
			for (int i = 0; i < juryleden; i++){
				System.out.println("Geef uw quotaties in op tien: ");
				int quotaties = scanner.nextInt(); //quotaties op tien
				som+=quotaties; //alles optellen en delen door het aantal
			}
			System.out.println("Het gemiddelde punt bedraagd: "+ som/(int)juryleden);
		}
		else { //als mijn jury leden niet uit 3 personen bedragen print het onderste af:
			System.out.println("Onvoldoende juryleden!");
		}
	}
}