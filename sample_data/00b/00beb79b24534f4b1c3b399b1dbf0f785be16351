SELECT sum, name 
FROM 
( 
SELECT name, SUM(cooking.calorie) AS sum 
FROM dishes 
JOIN cooking ON cooking.id_dishes=dishes.id 
GROUP BY name 
) t1 
JOIN 
( 
SELECT MIN(sum) AS min 
FROM 
( 
SELECT name, SUM(cooking.calorie) AS sum 
FROM dishes 
JOIN cooking ON cooking.id_dishes=dishes.id 
GROUP BY name 
) t1) t2 ON sum=min