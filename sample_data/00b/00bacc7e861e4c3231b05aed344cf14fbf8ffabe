package garrettispepega;
import java.util.Scanner;

public class pepega {
	
	public static void main(String[] args) {
	String pass;
		
	Scanner input = new Scanner(System.in);
	System.out.println("password here bitchs");
	pass = input.next();
	
	isLongEnough(pass);

	}
	
	public static void isLongEnough(String s) {
		if(s.length() < 8) {

			
			Scanner input = new Scanner(System.in);
			System.out.println("Password must be greater than 8 characters");
			String pass = input.next();
			
			isLongEnough(pass);
			
		}
		else{
				hasUpperCase(s);
			}
		}
	
	public static void hasUpperCase(String s) {
		String uppercase = "(.*[A-Z].*)";
		if(!s.matches(uppercase)) {
			Scanner input = new Scanner(System.in);
			System.out.println("Password must contain at least one uppercase character");
			String pass = input.next();
			
			isLongEnough(pass);
		}
		else {
			hasLowerCase(s);
		}
	}
	
	public static void hasLowerCase(String s) {
		String lowercase = "(.*[a-z].*)";
		if(!s.matches(lowercase)) {
			Scanner input = new Scanner(System.in);
			System.out.println("Password must contain at least one lowercase character");
			String pass = input.next();
			
			isLongEnough(pass);
		}
		else {
			hasSpecialChar(s);
		}
	}
	
	public static void hasSpecialChar(String s) {
		String specialChars = "(.*[ ! # @ $ % ^ & * ( ) - _ = + [ ] ; : ' \" , < . > / ?].*)";
		if(!s.matches(specialChars)) {
			hasDigit(s);
		}
		else {
			Scanner input = new Scanner(System.in);
			System.out.println("Password can only contain alpha numeric characters");
			String pass = input.next();
			
			isLongEnough(pass);
		}
	}
	
	public static void hasDigit(String s) {
		String digit = "(.*[0-9].*)";
		if(!s.matches(digit)) {
			Scanner input = new Scanner(System.in);
			System.out.println("Password does not have a digit make a new one");
			String pass = input.next();
			
			isLongEnough(pass);
		}
		else {
			ispassword(s);
		}
	}
	
	public static void ispassword(String s) {
		String word1 = "password";
		String word2 = "drowssap";
		String word3 = "passw0rd";
		String word4 = "dr0wssap";
		

		if( s.toLowerCase().indexOf(word1.toLowerCase()) != -1 || s.toLowerCase().indexOf(word2.toLowerCase()) != -1 || s.toLowerCase().indexOf(word3.toLowerCase()) != -1 || s.toLowerCase().indexOf(word4.toLowerCase()) != -1) {
			Scanner input = new Scanner(System.in);
			System.out.println("Password cannot contain the word 'password'");
			String pass = input.next();
			
			isLongEnough(pass);
		}
		else {
			System.out.println(s + " is a valid password");
		}
	}