#include<iostream.h>

#include<conio.h>
#include<limits.h>

using namespace std;

int arr[100000]={0},temp1[50000],temp2[50000];

void merge(long long p,long long r,long long q)
{
     long long n1=q-p,n2=r-q+1;
     long long i=0,j=0,k;
     for(i=0;i<n1;i++)
     {                
                                          temp1[i]=arr[p+i];                 
     }
     temp1[n1]=LONG_MAX;
     for(j=0;j<n2;j++)
     {
                      temp1[i]=arr[q+j];                  
     }
     temp2[n2]=LONG_MAX;
     i=j=0;
     for(k=p;k<=r;k++)
     {
                      if(temp1[i]<=temp2[j])
                      arr[k]=temp1[i++];
                      else arr[k]=temp2[j++];
     }
}

void mergesort(long long p, long long r)
{
     while(p<r)
     {
               long long q=(p+r)/2;
               mergesort(p,q-1);
               mergesort(q,r);
               merge(p,r,q);
     }
}



int main()
{
    long long n;
    cin>>n;
for(long long i=0;i<n;i++)
{
         cin>>arr[i];
         }
mergesort(0,n-1);
cout<<counter;

getch();
return 0;
}