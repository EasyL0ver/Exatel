#include <stdio.h>

typedef struct ugyfel{ char nev[20]; 
                        float betet; 
                        int lekotIdo; 
                        float kamatLab;
                    }ugyfel;

void feltolt(ugyfel *u, int m);
void listaz(ugyfel *u, int m);


int main(){
    int meret = 3; ugyfel ugyfelek[meret];
    feltolt(ugyfelek, meret);
    listaz(ugyfelek, meret);

    return 0;
}

void feltolt(ugyfel *u, int m){
    for(int i = 0; i < m; i++){
        printf("Nev: "); scanf(%"s", u[i].nev);
        printf("Betet: "); scanf("%f", &u[i].betet);
        printf("Lekot. ido: "); scanf("%d", &u[i].lekotIdo);
        printf("Kamatlab: "); scanf("%f", &u[i].kamatLab);
    }
}

void listaz(ugyfel *u, int m){
    for(int i = 0; i < m; i++){
        printf("Nev: "); scanf(%"s", u[i].nev);
        printf("Betet: "); scanf("%f", &u[i].betet);
        printf("Lekot. ido: "); scanf("%d", &u[i].lekotIdo);
        printf("Kamatlab: "); scanf("%f", &u[i].kamatLab);
    }
}