program Lab_1_1;
{$APPTYPE CONSOLE}
uses
  SysUtils;

var
   x, y, Radius: real;
   flag, flag1, flag2: boolean;
begin

   Writeln ('Enter parametres M( x ; y )');
   repeat
      Write ('x = ');
      try
         Readln (x);
         flag := true;
      except
            Writeln ('Wrong,try to enter the number again!') ;
      end;
   until flag = True;
   repeat
      Write ('y = ');
      try
         Readln (y);
         flag1 := True;
      except
            Writeln ('Wrong,try to enter the number again!') ;
      end;
   until flag1 = True;
   Writeln('the parametres of a close set D :');
   repeat
      Writeln ('radius = ');
      try
         Read(Radius);
         if Radius<0 then
            begin
               flag2:=False;
               Writeln ('Wrong,you should enter the number,which is more than 0!');
            end
         else flag2:=True;
      except
            Writeln ('Wrong,try to enter the number again!') ;
      end;
   until (flag2 = true) and (Radius > 0);
   if sqrt(sqr(Radius - x) + sqr(Radius - y)) <=Radius then
      Writeln('the dot M belongs to the closed set D')
      else
          Writeln('the dot M does not belong to the closed set D');
   Readln;
   Readln;
end.