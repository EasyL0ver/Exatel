import random
min_roll = 1
max_roll = 6


def menu():

    roll = True

    while roll == True:
        print "press 1 to roll the dice"
        print "press 2 to quit"

        options = raw_input("what would you like to do?")

        if options == "1":
            rolling()
        elif options == "2":
            quit()
        else:
            print"you've entered the wrong key"


def rolling():

    print "rolling the dice..."
    print random.randint(min_roll, max_roll)
    print random.randint(min_roll, max_roll)

    raw_input("would you like to roll again? (yes/no)")
    if("yes"):
        rolling()
    elif("no"):
        print "entering main menu "
        menu()
    else:
        print "you entered the wrong key try again"


menu()