pragma solidity ^0.4.24;

import "./ERC223/Burnable223Token.sol";
import "./ERC223/Mintable223Token.sol";

contract BeerToken is Burnable223Token, Mintable223Token {

  string public constant name = "IceCreamToken";
  string public constant symbol = "ICT";
  uint256 public INITIAL_SUPPLY = 1000000;

  function BeerToken() public {
    totalSupply_ = INITIAL_SUPPLY;
    balances[msg.sender] = INITIAL_SUPPLY;
    Transfer(address(0), this, INITIAL_SUPPLY);
  }
}