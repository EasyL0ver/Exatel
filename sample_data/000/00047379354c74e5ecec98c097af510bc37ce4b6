    function validateCustomerDetails() {
        var errCustId.innerHTML="<font color=red>Customer Id can not be left blank</font>";
        var customerName = document.customerform.customerName.value;
        var customerAddress  = document.forms[0].elements[2].value;
        
        var errCustId=document.getElementById("errCustId");
        var errCustName=document.getElementById("errCustName");
        var errCustAdd=document.getElementById("errCustAdd");
       
        if (customerId.length== 0)
            {
        errCustId.innerHTML="<font color=red>Customer Id can not be left blank</font>";
            }
        else if (customerId.length < 0)
            alert("Negative Customer Id is not allowed");
        else if (customerName.length == 0)
            errCustName.innerHTML="<font color=red>Customer Name can not be left blank</font>";
        else if (customerAddress =="-1")
        	{
            errCustAdd.innerHTML="<font color=red>Select Customer Address</font>";
        	}
        else if (document.forms[0].elements[3].checked)
            alert("billAmount not Checked");
        else
            alert("Welcome!!");
    }
</script>
 

