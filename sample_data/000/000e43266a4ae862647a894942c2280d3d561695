// Etot wariant NJe trjebujet pjerjezagruzku stranicy posłje poworota ustrojstwa, NO jest skaczjek pri skrołje
// Snaczała my połuczajem wysotu okna prosmotra i umnożajem jeje na 1%, cztoby połuczit znaczjenije dłja każdoj jedinicy
let vh = window.innerHeight * 0.01;
// Zatjem my ustanawłiwajem znaczjenije w połzowatjełskom swojstwje --vh w kornjewoj katałog dokumjenta
document.documentElement.style.setProperty('--vh', `${vh}px`);

// My słuszajem sobytije resize
window.addEventListener('resize', () => {
// My wypołnjajem tot żje scjenarij
let vh = window.innerHeight * 0.01;
document.documentElement.style.setProperty('--vh', `${vh}px`);
});


// Etot wariant trjebujet pjerjezagruzku stranicy posłje poworota ustrojstwa, ZATO njet skaczka pri skrołje

// Snaczała my połuczajem wysotu okna prosmotra i umnożajem jeje na 1%, cztoby połuczit znaczjenije dłja każdoj jedinicy
let vh = window.innerHeight * 0.01;
// Zatjem my ustanawłiwajem znaczjenije w połzowatjełskom swojstwje --vh w kornjewoj katałog dokumjenta
document.documentElement.style.setProperty('--vh', `${vh}px`);