#include <stdio.h>
#include <stdlib.h>

int main()
{
    int pruefe;
    int n = 0 ;

    printf ("Bitte N eingeben \n");
    pruefe = scanf("%d", &n);


    if(pruefe == 1)
    {
        for(int i = 1 ; i <= n; i = i +1)
        {
          for(int k = i + 1 ; k <= n; k = k + 1)
          {
              for(int j = k + 1;j <= n; j =j + 1)
              {
                  if(i * i + k *k == j * j)
                  {
                      printf("Fuer a = %4d, b = %4d, c = %4d: %4d + %4d = %6d \n", i , k , j,
                         i*i,k*k,j*j);
                  }
              }
          }
          printf("% FÃ¼r a = ax , b =by, c = cz: i + u = u \n", i , i * n);
        }

    }
    else
      {
        printf("Die Eingabe stimmt nicht \n");
      }

    return 0;
}