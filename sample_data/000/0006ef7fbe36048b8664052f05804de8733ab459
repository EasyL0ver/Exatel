'use strict';

let secretary = throttle(worker, 1000);


function throttle(worker, delay) {
 let isBusy = false;

 return function secretary(...args) {
   if (isBusy) {
     return;
   }

   isBusy = true;

   setTimeout(() => {
     isBusy = false
   }, delay);

   worker.apply(this, args);
 }
}

function worker(event) {
 console.log(event.clientX);
}

document.addEventListener('mousemove', secretary);