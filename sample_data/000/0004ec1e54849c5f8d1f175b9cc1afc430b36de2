package lab2;
 
import java.util.Scanner;
 
public class LotteryThreeDigits {
 
    public static void main(String[] args) {
        int lottery = (int) (Math.random() * 1000);
       
        Scanner input = new Scanner (System.in);
        System.out.print("Enter your lottery numbers: ");
        int guessed = input.nextInt();
       
        int digit1 = guessed / 100;
        int digit2 = guessed % 100 / 10;
        int digit3 = digit2 % 10;
       
        int guessedDigit1 = guessed / 100;
        int guessedDigit2 = guessed % 100 / 10;
        int guessedDigit3 = guessedDigit2 % 10;
       
        System.out.println("The lottery number is: " + lottery);
       
        if (guessed == lottery) 
            System.out.println("You got an exact match: You win $12,000!");
        
        else  if  ((guessedDigit1 == digit2 ||guessedDigit1 == digit3 ) 
                		&& (guessedDigit2 == digit1 || guessedDigit2 == digit3) 
                		&& (guessedDigit3 == digit2 || guessedDigit3 == digit1)); 
                System.out.println("You matched all the numbers: You win $5,000!"); 
                else if      (guessedDigit1 == digit2 
            			|| guessedDigit1 == digit3   
            			|| guessedDigit2 == digit1 
            			|| guessedDigit2 == digit3 
            			|| guessedDigit3 == digit2 
            			|| guessedDigit3 == digit1);
                System.out.println("You matched one number: You win $1,000!");
                
                else 
                	System.out.println("Unfortunately, no match!");
        
            			
            			 
            			
     		  			
                
                
                 
                
        
                      
            	
	}

}