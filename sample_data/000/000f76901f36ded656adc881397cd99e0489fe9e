trigger addContactIdToAccount on Contact (after insert, after update, after undelete, after delete) {
    
    Map<Id, Id> conIdMapAccount = new Map<Id, Id>();
    Map<Id, List<String>> conIdMapAccountTextfield = new Map<Id, List<String>>();
    for(Contact con : Trigger.new)
    {
        Id accId;
        List<String> strAccountfield = new List<String>();
        if(con.AccountId != NULL)
        {
            conIdMapAccount.put(con.Id, con.AccountId);
            strAccountfield.add(con.id);
            accId = con.AccountId;
            
            //conIdMapAccountTextfield.put(con.AccountId, add(con.id));
        }
        conIdMapAccountTextfield.put(accId, strAccountfield);
    }
    
    
    
}