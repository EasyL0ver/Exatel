

class TrackSaves(User):

    def __init__(self, *args, **kwargs):
        super(TrackSaves, self).__init__(*args, **kwargs)
        self.saves = 0

   def save(self):
       super(TrackSaves, self).save()
       self.saves += 1


# vs


class TrackSaves(User):

    after __init__(*args, **kwargs):
        self.saves = 0

    after save(self):
        self.saves += 1