#include <iostream>
using namespace std;

float calculate(float num1, float num2, char arith);

int main() {	
	char arith;
	float a,b;
	
	cout << "-CALCUNATION-" << endl;
	cout << "Enter 1st Number: ";
	cin >> a;
 	cout << "Enter 2nd Number: ";
	cin >> b;
	
	cout << "What do you want to do?" << endl;
	cout << "Enter Choice[+|-|*|/]: ";	
	cin >> arith;
	
	cout << "Total: " << calculate(a,b,arith);
}

float calculate(float num1, float num2, char arith){
	switch(arith){
		case '+': 
			return num1 + num2;
			main();
		break;
		case '-':
			return num1 - num2;
			main();
		break;
		case '*':
			return num1 * num2;
			main();
		break;
		case '/':
			return num1 / num2;
			main();
		break;
		default:
			cout << "Wrong Choice!";
	}
}