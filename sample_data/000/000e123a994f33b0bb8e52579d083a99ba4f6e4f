Function getPDfPath(name As String)

  Dim path As String
  Dim version As String
  Dim versionNumber As Integer
  versionNumber = Left(Application.version, 2)

  If versionNumber = 16 Then
    version = "Excel 2016 (V " & Application.version & ")"
    path = Application.DefaultFilePath & "Report_2019.pdf"
  ElseIf versionNumber = 15 Then
    version = "Excel 2013 (V " & Application.version & ")"
    path = Application.ActiveWorkbook.path & "/Report_2019.pdf"
  ElseIf versionNumber = 14 Then
    version = "Excel 2011 (V " & Application.version & ")"
    path = Application.ActiveWorkbook.path & Application.PathSeparator & "Report_2019.pdf"
  Else
    Err.Raise Number:=vbObjectError + 999, Description:="no Excel detected!"
  End If

  getPDfPath = path

  End Function
	
Private Sub savePDF(name As String)

  Dim pdfFile As String
  pdfFile = getPDfPath(name)
  wsOutput.ExportAsFixedFormat Type:=xlTypePDF, fileName:=pdfFile

End Sub