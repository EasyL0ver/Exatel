#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <signal.h>

int value = 1;

void sigterm(int sig) {
  printf("Kind: SIGTERM\n");
  exit(0);
}

int main(int argc, char *argv[]) {
  int pid = 1;

  srand(time(NULL));

  while (value < 51) {
    if (value <= 25) {
      usleep(300 * 1000);
    } else {
      usleep(((rand() % 400) + 100) * 1000);
    }

    if (value == 9) {
      pid = fork();
      srand(time(NULL) + getpid());
      if(pid == 0) {
        signal(SIGTERM, sigterm);
      }
    }

    if (pid == 0) {
      printf("Kind: %d\n", value);
    } else {
      printf("Vater: %d\n", value);
    }

    value += 1;
  }

  if (pid == 0) {
    printf("Kind: Ich bin fertig!\n");
  } else {
    printf("Vater: Ich bin fertig!\n");
    //wait(0);
    kill(pid, SIGTERM);
  }

  return 0;
}