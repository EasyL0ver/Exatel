template<typename ReturnType, typename... Args>
void declare_and_call(Args... args) {
    // declaration
    ReturnType bar(Args...); // (1) OK
    ReturnType bar(args...); // (2) error: variable or field ‘bar’ declared void

    // function call
    bar(args...);
}

// another .cpp file
// definition
void bar() {

}


int main() {
    declare_and_call<void>();
}