/**
* Contador de Moedas
*
*@author: Anderson Arnold Machado
*/

function calcular(){
var valor = document.getElementById("id_moedas").value;
var cedulas = 0;
var valorcedulasatual = 1;
var valoraserentregue = valor;
var controle = true;
var resultado;
while(true){
    if(valorcedulasatual <= valoraserentregue){
        cedulas += 1;
        valoraserentregue -= valorcedulasatual;
        valoraserentregue = valoraserentregue.toFixed(2);
    }
    else{
        if(cedulas > 0){
            if(valorcedulasatual==1){
            resultado = document.getElementById('moedas_1real').innerHTML = cedulas + " moedas de R$ " + valorcedulasatual + " Real \n ";
            //controle = false;
            //print("%d c√©dulas de R$%5.2f" % (cedulas, valorcedulasatual))
        }
        else  if(valorcedulasatual==0.5){
            resultado = document.getElementById('moedas_50cents').innerHTML = cedulas + " moedas de R$ " + valorcedulasatual.toFixed(2) + " \n ";
        }
        else  if(valorcedulasatual==0.25){
            resultado = document.getElementById('moedas_25cents').innerHTML = cedulas + " moedas de R$ " + valorcedulasatual + " \n ";
          
        }
        else if(valorcedulasatual==0.1){
            resultado = document.getElementById('moedas_10cents').innerHTML = cedulas + " moedas de R$ " + valorcedulasatual.toFixed(2) + " \n ";   
        }
        else if(valorcedulasatual==0.05){
            resultado = document.getElementById('moedas_5cents').innerHTML = cedulas + " moedas de R$ " + valorcedulasatual + " \n ";
          
        }
        else if(valorcedulasatual==0.01){
            resultado = document.getElementById('moedas_1cent').innerHTML = cedulas + " moedas de R$ " + valorcedulasatual + " \n "; 
        }
        }
        
        if(valorcedulasatual == 1){
            valorcedulasatual = 0.5;
        }
        else if(valorcedulasatual == 0.5){
            valorcedulasatual = 0.25;
        }
        else if(valorcedulasatual == 0.25){
            valorcedulasatual = 0.10;
        }
        else if(valorcedulasatual == 0.10){
            valorcedulasatual = 0.05;
        }
        else if(valorcedulasatual == 0.05){
            valorcedulasatual = 0.01;
        }
        if(valoraserentregue == 0){
            break;
        }
        
        cedulas = 0;
    }      

    }
}