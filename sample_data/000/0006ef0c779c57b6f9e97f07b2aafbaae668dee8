import { addClassNameToDocument, addClassName } from '...';

describe('addClassNameToDocument function', () => {
  const documentMock = {
    body: {
      className: '',
    },
  };
  
  const _addClassName = addClassNameToDocument(documentMock);

  // testing the actual function
  test('sets className to document.body', () => {
    const className = '...';
    _addClassName(className);
    expect(documentMock.body.className).toBe(className);
  });
  
  // comparing string representations of both functions
  test('the result of addClassNameToDocument matches the addClassName', () => {
    expect(_addClassName.toString()).toEqual(addClassName.toString());
  });
});