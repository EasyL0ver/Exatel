print("Welcome to the Numbers World")
print("Try using numbers in different operations")

# Addition

input1 = input("Number 1>")
input2 = input("Number 2>")
input3 = input("Number 3>")

number1 = int(input1)
number2 = int(input2)
number3 = int(input3)

result = (number1 + number2 + number3)
output = str(result)
print(number1 "+" number2 "+" number3 "=" output)


# Multiplication

input1 = input("Number1")
input2 = input("Number2")

number1 = int(input1)
number2= int(input2)

result = number1 * number2
output = str(result)
print(f"{number1} * {number2} = {output}")