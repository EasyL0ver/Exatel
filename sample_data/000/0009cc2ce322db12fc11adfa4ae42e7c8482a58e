addBillBoardGUI("The Astral Lord",nil,Color3.new(255,255,255))


wait()

char.Humanoid.WalkSpeed = 50
char.Humanoid.MaxHealth = math.huge

char.Humanoid.Health = char.Humanoid.MaxHealth
Instance.new("ForceField",char)

for I,v in pairs(char:GetChildren()) do
if v:IsA("Part") then
v.Touched:Connect(function(hit)
if hit.Parent.Humanoid and hit.Parent.Humanoid.Health > 0 and hit.Parent ~= workspace then
hit.Parent.Humanoid.MaxHealth = 100
wait(1)
	hit.Parent.Humanoid.Health = 0
elseif hit:IsA("Part") then
hit.Anchored = true
end
end)
end
end

game.Lighting.FogEnd = 500
game.Lighting.TimeOfDay = 0


print("Loaded")

warn("The Astral Lord v2.0, by MyUsernamesThis00101")
warn("CODE: soon")
warn("Warning: Donâ€™t use 2 moves at the same time!")

warn("Commands:")
warn("rage/ = to get more power")
warn("blast/ = to kill someone with a blast")
warn("destruct/ = to kill everyone near you")


player.Chatted:Connect(function(msg)
if string.lower(msg) == "rage/" then
if isRaging == false then
isRaging = true
local sphereRaging = Instance.new("Part",workspace)
sphereRaging.Name = "sphereTransform"
sphereRaging.CanCollide = false
sphereRaging.Transparency = 0.4
sphereRaging.BrickColor = BrickColor.new("White")
sphereRaging.Size = Vector3.new(1,1,1)
sphereRaging.Anchored = true
sphereRaging.Shape = Enum.PartType.Ball
sphereRaging.Position = char.Torso.Position

local rageSound = Instance.new("Sound",workspace)
rageSound.Name = "Roar"
rageSound.SoundId = "rbxassetid://1335686783"
rageSound.Volume = 5
rageSound:Play()
spawn(function()
for I = 1,30 do
sphereRaging.Size = sphereRaging.Size + Vector3.new(1,1,1)
wait(.07)
end
end)
rageLevel = rageLevel + 1
if rageLevel == 1 then
local rageFire= Instance.new("Fire",char.Head)
rageFire.Name = "RagingFire"
rageFire.Color = Color3.new(255,255,255)
rageFire.SecondaryColor = rageFire.Color
rageFire.Size = 10
hum.WalkSpeed = 100
elseif rageLevel == 2 then
rageFire.Size = 15
hum.WalkSpeed = 125
elseif rageLevel == 3 then
rageFire.Size = 20
hum.WalkSpeed = 150
elseif rageLevel > 3 then
print("Rage Level above 3, returning to level 3")
rageLevel = 3
end
sphereRaging:Destroy()
rageSound:Destroy()
wait(10)
isRaging = false



else
local errorMsg = Instance.new("Message",player.PlayerGui)
errorMsg.Name = "Error"
errorMsg.Text = "You can rage the character every 10 seconds!"
wait(5)
errorMsg:Destroy()


end
elseif string.lower(msg) == "blast/"  then
if blastCooldown == false then
blastCooldown = true
local blast = Instance.new("Part",workspace)
blast.Name = "BlastPart"
blast.Shape = Enum.PartType.Cylinder
blast.Size = Vector3.new(3,2,3)
blast.CFrame = CFrame.fromEulerAnglesXYZ(0,90,0)
blast.CanCollide = false
blast.Anchored = true
blast.Position = char.Torso.Position
blast.BrickColor = BrickColor.new("White")
blast.Transparency = 0.4
blast.Material = Enum.Material.Neon

local blastSound = Instance.new("Sound",blast)
blastSound.Name = "Blast"
blastSound.Volume = 4
blastSound.SoundId = "rbxassetid://392838370"
blastSound.MaxDistance = 10000
blastSound:Play()


blastTweening = true

spawn(function()
for index=1,30 do
blast.Size = blast.Size + Vector3.new(0,1.2,0)
wait(.08)
end
end)
blastTweening = false



blastCooldown = false

blast.Touched:Connect(function(hit)
if hit.Parent.Name ~= char.Name then
hit.Parent.Humanoid.MaxHealth = 0
hit.Parent.Humanoid.Health = 0
end
for I = 1,10 do
blast.Transparency = blast.Transparency + 0.1
wait(.07)
end
blast:Destroy()
end)
end
elseif string.lower(msg) == "destruct/" then

local sphereD = Instance.new("Part",workspace)
sphereD.Name = "sphereDestruct"
sphereD.CanCollide = false
sphereD.Transparency = 0.4
sphereD.BrickColor = BrickColor.new("White")
sphereD.Size = Vector3.new(1,1,1)
sphereD.Anchored = true
sphereD.Shape = Enum.PartType.Ball
sphereD.Position = char.Torso.Position

spawn(function()
for I = 1,60 do
sphereD.Size = sphereD.Size + Vector3.new(3,3,3)
Instance.new("Explosion",sphereD)
wait(.04)
end
end)

end



end)