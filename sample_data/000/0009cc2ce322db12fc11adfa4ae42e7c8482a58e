wait()



warn("The Astral Lord v2.0 (Local), now loading..")
warn("Finding Player..")

repeat wait()
until game.Players.LocalPlayer
warn("Player Found")
repeat wait()
until game.Players.LocalPlayer.Character
warn("Player Character Found")

warn("Loading..")
--[[ Local Player Variables ]]--
local player = game.Players.LocalPlayer
local char = player.Character
--// Other Variables
local hum = char.Humanoid
local head = char.Head
local tweenTimes = 0
local isRaging = false
local rageLevel = 0
local sphereTweening = false
local blastCooldown = false
local blastTweening = false
local chatService = game:GetService("Chat")
local runService = game:GetService("RunService")
local bodyParts = {

char["Left Arm"],
char["Right Arm"],
char["Left Leg"],
char["Right Leg"], char.Torso

}

--// Functions
function color3(r,g,b)
return Color3.new(r,g,b)
end




function addBillBoardGUI(Name,textLabel,Color3__)
local billboard = Instance.new("BillboardGui",char.Head)
billboard.Name = Name
billboard.MaxDistance = 200
billboard.Size = UDim2.new(1,0,0.5,0)
billboard.AlwaysOnTop = true
billboard.ExtentsOffsetWorldSpace = Vector3.new(0,5.5,0)
local textLabelInstance = Instance.new("TextLabel",billboard)
textLabelInstance.Name = "NameText"
textLabelInstance.BackgroundTransparency = 1
textLabelInstance.Position = UDim2.new(0,-250,0,-30)
textLabelInstance.Text = Name
textLabelInstance.TextColor3 = Color3__
textLabelInstance.Font = Enum.Font.Fantasy
textLabelInstance.TextStrokeTransparency = 0
textLabelInstance.TextSize = 75
textLabelInstance.Size = UDim2.new(0,550,0,100)
wait(0.1)
print("Successfully made Billboard")
end

--// On running

if runService:IsServer() then warn("Error loading: Please use hl/ instead of h/.") return else warn("Script on client.") end



--// Check if character is R6.

if hum.RigType ~= Enum.HumanoidRigType.R15 then
	print("R6 detected, now moving to transformation.")
else
	print("R15 not compatible!")
	return -- to prevent the script from running
end

--// Transformation

wait(3)

for index,v in pairs(char:getChildren()) do
	if v:IsA("CharacterMesh") then
		v:Destroy()
	end
end


for index,hat in pairs(char:getChildren()) do
if hat:IsA("Accessory") then
hat:Destroy()
end
end

if char:findFirstChild("Shirt") ~= nil and char:findFirstChild("Pants") ~= nil then
char.Shirt:Destroy()
char.Pants:Destroy()
else print("Shirt and Pants Not Found, proceeding..")
end

for I,v in pairs(char:getChildren()) do
if v:IsA("Part") then
v.BrickColor = BrickColor.new("Bright green")
end
end


hum.WalkSpeed = 0

wait()
chatService:Chat(head,"The cataclysm, all destruct. All 4 Elements, diverse, inverse, and come forth into eternity.","Red")
wait(3)
chatService:Chat(head,"If we destruct and destroy, we will bring forth the cataclysm.","Red")
wait(3)
chatService:Chat(head,"Out of this, O Azure. Destroy and bring forth YIN-YANG! BRING FORTH CALAMITIES AND END THE WORLD!!!!","Red")




local sphereTransforming = Instance.new("Part",workspace)
sphereTransforming.Name = "sphereTransform"
sphereTransforming.CanCollide = false
sphereTransforming.Transparency = 0.4
sphereTransforming.BrickColor = BrickColor.new("White")
sphereTransforming.Size = Vector3.new(1,1,1)
sphereTransforming.Anchored = true
sphereTransforming.Shape = Enum.PartType.Ball
sphereTransforming.Position = char.Torso.Position

local newFire = Instance.new("Fire",head)
newFire.Name = "Transforming"
newFire.Color = Color3.new(255,255,255)
newFire.SecondaryColor = Color3.new(255,255,255)
newFire.Size = 0


spawn(function()
for index = 1,30 do
sphereTransforming.Size = sphereTransforming.Size + Vector3.new(0.6,0.6,0.6)
newFire.Size = newFire.Size + 1
tweenTimes = tweenTimes + 1
wait(.06)
end
end)
repeat wait() until tweenTimes >= 30

newFire:Destroy()
sphereTransforming:Destroy()
 


for I,v in pairs(char:getChildren()) do
if v:IsA("Part") then
v.BrickColor = BrickColor.new("White")
v.Material = Enum.Material.Neon
end
end

local selectionBox1 = Instance.new("SelectionBox",bodyParts[1])
selectionBox1.Adornee = bodyParts[1]
selectionBox1.Color = BrickColor.new("Black")
selectionBox1.LineThickness = 0.1
selectionBox1.Transparency = 0.3

local selectionBox2 = Instance.new("SelectionBox",bodyParts[2])
selectionBox2.Adornee = bodyParts[2]
selectionBox2.Color = BrickColor.new("Black")
selectionBox2.LineThickness = 0.1
selectionBox2.Transparency = 0.3

local selectionBox3 = Instance.new("SelectionBox",bodyParts[3])
selectionBox3.Adornee = bodyParts[3]
selectionBox3.Color = BrickColor.new("Black")
selectionBox3.LineThickness = 0.1
selectionBox3.Transparency = 0.3


local selectionBox4 = Instance.new("SelectionBox",bodyParts[4])
selectionBox4.Adornee = bodyParts[4]
selectionBox4.Color = BrickColor.new("Black")
selectionBox4.LineThickness = 0.1
selectionBox4.Transparency = 0.3

local selectionBox5 = Instance.new("SelectionBox",bodyParts[5])
selectionBox5.Adornee = bodyParts[5]
selectionBox5.Color = BrickColor.new("Black")
selectionBox5.LineThickness = 0.1
selectionBox5.Transparency = 0.3






local newSound = Instance.new("Sound",char)
newSound.Name = "Music"
newSound.SoundId = "rbxassetid://160442087"
newSound.Looped = true
newSound.Volume = 6
newSound.MaxDistance = 10000
newSound:Play()

