console.info('Výpis funkce dvojnasobek');

// definice funkce s parametrem param
// zde nedochází k jejímu spuštění
function dvojnasobek(param) {
    let dvojnasobek = param * 2;  
    console.log('Vstup:', param, 'Výstup:', dvojnasobek, typeof dvojnasobek);

    return dvojnasobek;
}

// výsledek funkce je zde vypočítán a vrácen, ale není nikde využit
dvojnasobek(20); 

// spuštění (neboli volání) funkce a to s argumentem čísla 30
// výsledek funkce je zde vypočítán, vrácen a uložen do proměnné
let vysledek1 = dvojnasobek(30); 

// K1 – výpis konzole pro vstup: param, V – výstup = návratová hodnota = výsledek funkce
// K2 – výpis konzole pro: typeof dvojnasobek 

let vysledek2 = dvojnasobek(20);     // K1: 20          V: 40    K2: "number"   
let vysledek3 = dvojnasobek('20');   // K1: "20"        V: 40    K2: "number"  
let vysledek4 = dvojnasobek(2.6);    // K1: 2.6         V: 5.2   K2: "number"
let vysledek5 = dvojnasobek('text'); // K1: "text"      V: NaN   K2: "number"
let vysledek6 = dvojnasobek(true);   // K1: true        V: 2     K2: "number"
let vysledek7 = dvojnasobek(false);  // K1: false       V: 0     K2: "number"
let vysledek8 = dvojnasobek();       // K1: undefined   V: NaN   K2: "number"

/*

 - zápis dvojnasobek("20"); a dvojnasobek('20'); je totožný
 - Výsledek funkce resp. její návratová hodnota je vždy datového typu "number",
   protože provádíme číselnou operaci násobení.
 - NaN reprezentuje datový typ "number" přičemž je to zkratka "Not-A-Number".
 - Výpočtem je NaN vráceno vždy, když nelze dosáhnout korektního číselného výsledku.
 - Ve skriptu lze funkcí ověřit, je-li výsledek operace NaN: isNaN(prom)
    Tato funkce vrací Boolean – true nebo false. 
 https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/NaN

----------------------------------------------------------------------------
 */

console.info('Otestování undefined');

// Operátor typeof vrací string – textový řetězec a určuje datový typ vstupu
console.log(typeof prom); // 'undefined'


// Co je obsahem proměnné prom ? Výsledek spuštěné funkce nebo deklarovaná funkce ?

// zde nedochází k jejímu spuštění
let prom = function mojeFunkce(param) {
    console.log(param);
}

console.log(typeof prom); // 'function' 

let prom2 = new function mojeFunkce2(param) {
    console.log(param);
}
console.log(typeof prom2); // 'object'