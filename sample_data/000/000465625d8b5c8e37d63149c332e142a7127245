/*
Write a program using a function, that allows the user to enter a word or sentence, and then converts the first letter of every word into uppercase.
*/
 
#include<iostream>
#include<stdio.h>
#include<ctype.h>
using namespace std;
void change(char str[20])
{
    int i,l;
    cout<<"Enter Sentence: ";
    gets(str);
    l=strlen(str);
    str[0]=toupper(str[0]);
    for(i=0;i<l-1;i++)
    {
        if(str[i]==' ')
            str[i+1]=toupper(str[i+1]);
        
    }
    cout<<"Changed sentence is: ";
    puts(str);
    }

    int main ()
    {
        char s[20];
    change(s);
    }
 
/*
Enter Sentence:
my name is karamvir chopra
Changed sentence is: My Name Is Karamvir Chopra
*/