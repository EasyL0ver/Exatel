	public void getTemp() //displays temp for a requested day.
	{
		int temp = 0, index = 0;
		String day;
		Scanner input = new Scanner(System.in);
		
		System.out.println("For what day would you like to see the temp?");
		day = input.next();
		
		if(day == "Sunday")
			index = 0;
		else if(day == "Monday")
			index = 1;
		else if(day == "Tuesday")
				index = 2;
		else if(day == "Wednesday")
			index = 3;
		else if(day == "Thursday")
			index = 4;
		else if(day == "Friday")
			index = 5;
		else if(day == "Saturday")
			index = 6;

		System.out.println("\nThe temperature for " + day + " is " 
			+ week[index] + " degrees.");
	}