#include<stdio.h>
int main(){

int tablica[100],n,i,j;
printf("Podaj ilosc Elemntow : ");
scanf("%d",&n);
for( i=0;i<n;i++){
	scanf("%d",&tablica[i]);    //-->Wczytywanie elemntow 
}

printf("Wczytane Elementy :");
for(i=0;i<n;i++){
	printf(" ");
	printf("%d",tablica[i]);
}
printf("\n");
for(i=0;i<n;i++)
  {
  	for(j=0;j<n;j++)
  	{
  		if(tablica[j]>tablica[i])
  		{
  			int temp = tablica[i];    //------>temp lub swap sortuje ;)
  			tablica[i]=tablica[j];
  			tablica[j]=temp;
		  }
	  }
  }
 printf(" Po Sortowane Rosnoco: ");
  for(i=0;i<n;i++)
  {
  	printf(" ");
  	printf("%d",tablica[i]);
  }
  for(i=0;i<n;i++) 
  {
  	for(j=0;j<n;j++)
  	{
  		if(tablica[j]<tablica[i]) //----->malejoco 
  		{
  		int temp = tablica[i];
  		tablica[i]=tablica[j];
  		tablica[j]=temp;
  	}
	  }
  }
  printf("\n");
  printf(" Po Sortowane malejoco : ");
  for(i=0;i<n;i++)
  {
  	printf(" ");
  	printf("%d",tablica[i]);
  }
 return 0;
}