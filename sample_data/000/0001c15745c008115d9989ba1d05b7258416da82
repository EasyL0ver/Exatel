<Modal
  visible={this.state.modal === true}
  closable={false}
  title={'Add New Finansial Sparepart'}
  footer={null}
  style={{width: '100%'}}
>
  <div style={{overflowY: 'hidden', overflowX: 'hidden'}}>
    <Form>
      <Steps progressDot={(dots) => <dots style={{fontColor: '#222'}}/> } current={current} size="small">
        {steps.map(item => <Step key={item.title} />)}
      </Steps>
      <br/>
      <div className="steps-content">
        {steps[current].content}
      </div>
      <br/>
      <div className="steps-action">
        {
          current > 0
          && (
          <Button style={{ float: 'left', position:'relative' }} onClick={() => this.prev()}>
            Previous
          </Button>
          )
        }
        {
          current < steps.length - 1
          && <Button type="primary" style={{ float: 'right', position:'relative' }} onClick={() => this.next()}>Next</Button>
        }
        {
          current === steps.length - 1
          && <Button type="primary" style={{ float: 'right', position:'relative' }} onClick={() => {
            message.success('Processing complete!')
            this.setState({modal: false, current: 0})
          }}>Done</Button>
        }
        <Button type="danger" style={{ float: 'right', position:'relative', marginRight: 5 }} onClick={() => this.setState({modal: false, current: 0})}>Close</Button>
      </div>
    </Form>
  </div>
</Modal>