print("Hi, I'm Marvin, the Math Bot.")
command = input("Choose a mode: add, subtract, average, or total >> ")
    
def do_calculation():
    print("Let's " + command + " some numbers!")
    input1 = input("Number 1 >> ")
    input2 = input("Number 2 >> ")
    number1 = int(input1)
    number2 = int(input2)
    if command == "add":
        result = number1 + number2
        operator = " + "
    elif command == "subtract":
        result = number1 - number2
        operator = " - "
    print(f"{input1}{operator}{input2} = {result}")

def do_average():
    print("Let's find the average!")
    how_many = input("How many numbers?> ")
    how_many = int(how_many)
    total = 0
    for number_count in range(how_many):
        number = input(f"Enter number {number_count + 1} > ")
        total = total + float(number)
        result = total / how_many
    print(f"The average = {result}")

def do_total():
    print("Let's find the total!")
    how_many = input("How many numbers shall we total? > ")
    how_many = int(how_many)
    total = 0
    for number_count in range(how_many):
        number = input(f"Enter number {number_count + 1} > ")
        total = total + float(number)
    print(f"The grand total = {total}")

if command == "add":
    do_calculation()

elif command == "subtract":
    do_calculation()
    
elif command == "average":
    do_average()

elif command == "total":
    do_total()