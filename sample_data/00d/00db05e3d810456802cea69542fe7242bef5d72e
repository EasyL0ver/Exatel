// akismet check
                Subkismet.Akismet<Subkismet.Comment> akismet = Subkismet.Akismet<Subkismet.Comment>.CreateSimpleAkismet(
                    ConfigurationManager.AppSettings["AkismetKey"], new Uri(Helper.BlogURL));

                Subkismet.Comment comment = new Subkismet.Comment(System.Net.IPAddress.Parse(c.AuthorIP), Request.UserAgent);
                comment.Author = c.AuthorName;
                comment.AuthorEmail = c.AuthorEmail;
                Uri authorUrl = null;
                if (Uri.TryCreate(c.AuthorURL, UriKind.Absolute, out authorUrl))
                {
                    comment.AuthorUrl = authorUrl;
                }
                else
                {
                    comment.AuthorUrl = null;
                }
                comment.CommentType = "comment";
                comment.Content = c.CommentContent;

                bool isSpam = akismet.IsSpam(comment);