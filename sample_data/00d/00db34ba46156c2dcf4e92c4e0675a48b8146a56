USE BdDemos
GO
BACKUP LOG [BdDemos] TO
DISK = N'C:\BdDemos.bak'
WITH NOFORMAT, NOINIT, NAME = N'BdDemos-Log de Transações', SKIP, NOREWIND, NOUNLOAD, STATS = 10
GO
--WITH TRUNCATE_ONLY
DBCC SHRINKFILE (N'BdDemos_Log' , 0, TRUNCATEONLY)
GO
--Shrink direto na Base
DBCC SHRINKFILE (N'BdDemos' , 0, TRUNCATEONLY)

