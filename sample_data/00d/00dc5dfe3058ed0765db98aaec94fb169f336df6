// fixes the gmail redesign by making the left sidebar smaller

const NEW_WIDTH = '220px'

const fixSidebarWidth = () => {
  // this seems to be the sidebar
  const elem1 = document.getElementsByClassName('nH oy8Mbf nn aeN')[0]
  elem1.style.setProperty('width', NEW_WIDTH)
  elem1.style.setProperty('min-width', '0px', 'important')


  // this seems to be the div containing the labels (inbox, sent, etc)
  // we need to asjust the min-width to make sure unread counts are displayed correctly
  const elem2 = document.getElementsByClassName('wT')[0]
  elem2.style.setProperty('min-width', '0px', 'important')


  // The google logo in the top left corner
  // we adjust min-width, so that the search box is peoperly aligned w/ the now smaller sidebar
  const elem3 = document.getElementsByClassName('gb_Ac gb_Ud gb_ve')[0]
  elem3.style.setProperty('min-width', NEW_WIDTH)
}

setTimeout(() => {
  fixSidebarWidth()
}, 3000)