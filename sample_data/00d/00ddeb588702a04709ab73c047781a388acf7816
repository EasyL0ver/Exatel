DarkRP.createCategory{
    name = "Advanced Recon Commandos",
    categorises = "jobs",
    startExpanded = true,
    color = Color(161, 255, 255, 255),
    canSee = function(ply) return true end,
    sortOrder = 5
}

TEAM_ARCCOMMANDER = DarkRP.createJob("ARC Commander Blitz", {
    color = Color(173, 255, 255, 255),
    model = {"models/reizer_cgi_p2/rankor_blitz/rancor_blitz.mdl"},
    description = [[You are the Commander of the battalion named Advanced Recon Commandos. You lead the best of the best, keep it that way.]],
    weapons = {"climb_swep2", "weapon_fists", "weapon_rpw_binoculars", "voice_amplifier", "salute", "weapon_jetpack", "tfa_swch_dc17m_br", "tfa_swch_dc17m_at", "tfa_dc17m_shotgun", "tfa_sw_dc17dual", "weapon_swrc_det", "tfa_752_dc15s_expanded"},
    command = "blitz",
    max = 1,
    salary = 750,
    admin = 0,
    vote = false,
    hasLicense = true,
    candemote = false,
    category = "Advanced Recon Commandos",
    PlayerSpawn = function(ply)
        ply:SetMaxHealth(750)
        ply:SetHealth(750)
        ply:SetArmor(100)
    end
})

