package hello;

import javax.microedition.midlet.*;
import javax.microedition.lcdui.*;

/**
 * @author tti7kartom
 */
public class Mobiilisovellus extends MIDlet implements CommandListener
//Luokan muuttujat
    
    {
        private Command loppuCommand; //Luokan muuttujat
        private Command tyhjaCommand;
        private Command paluuCommand;
        private Display nayta;
                
        Form f;
        TextBox t=new TextBox("","",256,0);
        StringItem teksti=new StringItem(null, "Mobiilisovellus");
                             
 
    //Kontruktori
    public MobiiliSovellus()
    {
        nayta=Display.getDisplay(this);
        loppuCommand=new Command("Poistu",Command.SCREEN,1);
        tyhjaCommand=new Command("Tyhj√§",Command.SCREEN,2);
        paluuCommand=new Command("Paluu",Command.SCREEN,1);
    }
    public void startApp() 
    {
        f=new Form("Sovellus");
        f.addCommand(loppuCommand);
        f.addCommand(tyhjaCommand);

        f.setCommandListener(this);

        t.setString("Mobiilisovellus");
        f.append(teksti);
        t.addCommand(paluuCommand);
        t.setCommandListener(this);
        paavalikko();
    }
    
    public void pauseApp() {}    
    public void destroyApp(boolean unconditional)   {}

    public void commandAction(Command c, Displayable s)
    {
    if(c==loppuCommand)
        {
            destroyApp(false);
            notifyDestroyed();    
        }
    if(c==paluuCommand)
        {   
            paavalikko();
        }
    }    
}
}