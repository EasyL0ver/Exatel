#include <stdio.h>

int main(void)
{
	int i,anzahl,steuer;
	float netto,ergebnis;
	
	printf("Wie viele Nettobetraege moechten Sie umrechnenlassen: ");
	scanf("\n%d",&anzahl);
	printf("\nUm wie viel Prozent soll der Staat seine Buerger erleichtern: ");
	scanf("\n%f",&steuer);
	for(i=0;i<anzahl;i++)
	{
		printf("\nBitte geben Sie den %d. Betrag ein ",i+1);
		scanf("%f",&netto);
		ergebnis+=netto; /* Hier soll bei jedem durchgang die eingabe zu ergebnis dazugezÃ¤hlt werden*/
	}
	printf("\nNettobetraege kumuliert: %d",ergebnis);
	printf("\nBruttobetraege kumuliert: %d",ergebnis+(ergebnis*steuer/100));
	return 0;
}