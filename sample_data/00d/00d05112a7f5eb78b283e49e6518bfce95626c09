#include<iostream>
#include<cstdlib>
#include<windows.h>
#include<time.h>
using namespace std;

class Figura
{
protected:
    int latura;
public:
    Figura():latura(0){}

    Figura(int val):latura(val){}

    int getLatura()
    {
        return latura;
    }

    void setLatura(int val)
    {
        latura = val;
    }

};

class Dreptunghi:public Figura
{
    int lungime;
public:
    Dreptunghi(int lat, int lung)
    {
        latura = lat;
        lungime = lung;
    }
    int arie()
    {
        return latura*lungime;
    }
    void afisare()
    {
        cout<<"aria este: "<<arie()<<endl;
    }
};

int main()
{
    Dreptunghi d1(3,4);
    d1.afisare();
    Dreptunghi d2(5,81);
    d2.afisare();
    return 1;
}