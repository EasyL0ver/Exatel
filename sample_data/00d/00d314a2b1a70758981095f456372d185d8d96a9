public void assignProperties() {
		assignProperties(250, 1, 1, 1);
	}
	public void assignProperties(int hp, int maxHit, int attack, int defence) {
		walkingType = 0;
		getHealth().setMaximum(hp);
		getHealth().reset();
		this.maxHit = maxHit;
		this.attack = attack;
		this.defence = defence; //default
		direction = 1;
		isDead = false;
		applyDead = false;
		actionTimer = 0;
		randomWalk = false;
	}