#include<stdio.h>
int main(){
float res=1,x,fact=1,pow=1,val,a,i;
printf("Enter a real value x : ");
scanf("%f",&x);
res+=x,pow*=x;
for(pow*=x,i=3;i<2000;i++,pow*=x){
for(fact=1,a=1;a<=(i-1);++a)fact*=a;
if((pow/fact)<0.000001)break;
else res+=(pow/fact);}
printf("Exp(%.0f) = %.5f\n\n",x,res);
return 0;}