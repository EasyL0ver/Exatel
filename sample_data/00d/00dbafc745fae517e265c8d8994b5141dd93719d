mobile.views.dialog = mobile.views.base.extend({
    className: "my-dialog",
    initialize: function() {
      _.bindAll(this, 'render', 'open');
      this.render();
    },
    render: function() {
      $(this.el)
        .remove()
        .html(this.template())
        .css('display', 'none')
        .appendTo(document.body);
      return this;
    },
    open: function(opts) {
      $(this.el).fuel("controls.dialog", opts).fuel('controls.dialog', 'open');
    }
  });