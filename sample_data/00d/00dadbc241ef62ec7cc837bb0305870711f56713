version: '3'
services:
  web:
    image: lullaboteducation/drupaldevwithdocker-php:7.0
    environment: 
      DATABASE_HOST: db
    volumes:
      - ./docroot:/var/www/html:cached
    ports: 
      - "80:80"
  db:
    image: lullaboteducation/drupaldevwithdocker-mysql:10.0
    volumes:
      - ./db-backups:/var/mysql/backups:delegated
    env_file: 
      - ./docker.env
    ports:
      - "3306:3306"
  pma:
    image: phpmyadmin/phpmyadmin
    env_file: 
      - ./docker.env
    ports:
      - "8001:80"