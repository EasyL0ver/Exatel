#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define POCET 20

int vyskytHodnoty(int *pole, int pocet, int hodnota){
    int i;
    for(i=0;i<pocet;i++){
        if(pole[i]==hodnota)
            return i;
    }
    return -1;
}

void naplnPole(int *pole, int pocet){
    int i,hodnota;
    srand((unsigned)time(NULL));
    for(i=0;i<pocet;i++){
        do{
            hodnota=rand()%99+1;
        }while(vyskytHodnoty(pole,i,hodnota)!=-1);
        pole[i]=hodnota;        
    }    
    bubbleSort(pole,pocet);
    return;
    
}

void vypisPole(int *pole, int pocet){
    int i;
    for(i=0;i<pocet;i++){
        printf("%3d",pole[i]);
    }
    printf("\n");
    return;
}

void bubbleSort(int *pole, int pocet){
    int i, pomocna, j;
    for(j=pocet;j>1;j--){
        for(i=0;i<j-1;i++){
            if(pole[i]>pole[i+1]){
               pomocna=pole[i]; 
               pole[i]=pole[i+1];
               pole[i+1]=pomocna;
            }            
        }       
    }    
}
/*
 * 
 */
int main(int argc, char** argv) {
    int pole[POCET];
    naplnPole(pole,POCET);
    vypisPole(pole,POCET);
    

    return (EXIT_SUCCESS);
}