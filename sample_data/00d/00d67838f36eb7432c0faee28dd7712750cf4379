//4.1 | v16
#include <iostream>
using namespace std;
 
int main()
{
    int min, max;
    const int n = 5;
    int* arr = new int [n];
   
    for (int i = 0; i < n; i++){
        cin >> arr[i];
    }
   
    min = arr[0];
    max = arr[0];
   
    for(int i = 0; i < n; i++){
        if (arr[i] < min){
            min = arr[i];
        }
        if (arr[i] > max){
            max = arr[i];
        }
    }
    
    delete[] arr;
    
    cout << "RESULT: " << min*max;
    return 0;
}


//4.2 | v16
#include <iostream>
using namespace std;
 
int foo(int*, int);

int main ()
{
    const int size = 5;
    int* arr = new int [size];
   
    cout << "Input array: \n";
    
    for (int i = 0; i < size; i++){
        cin >> arr[i];
    }
   
    cout << "RESULT: " << foo(sum, size);
    delete[] arr;
    return 0;
}


int sum(int* arr, int size)
{
    int sum = 0;
    for (int i = 0; i < size; i++){
        if (*(arr+i) >= 0){
            sum += *(arr+i);
        }
        else
        {
            cout << "Negative number: " << *(arr+i) << endl;
            return sum;
        }
    }
    cout << "No negative numbers!" << endl;
    return sum;
}



//4.3 | v16

#include <iostream>
using namespace std;

int main()
{
    const int size = 5;
    float L, last = 1, S = 0;
    float* arr = new float[size];
    
    cout << "Input L: \n";
    cin >> L;
    
    cout << "Input array: \n";
    for (int i = 0; i < size; i++){
        cin >> arr[i];
    }
    
    last = arr[0];
    
    for (int i = 0; i < size; i++){
        if (arr[i] < 0 && arr[i] > L){
            S += arr[i];
        }
        if (arr[i] > 0){
            last = arr[i];
        }
    }
    delete[] arr;
    
    cout << "RESULT: " << last/S;
    

    return 0;
}