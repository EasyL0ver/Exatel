/**
 * @param {TreeNode} root
 * @return {number}
 */
var sumOfLeftLeaves = function(root, parent=null) {
  if (root == null) {
    return 0;
  }
  if(root.left === null && root.right === null) { 
    if (parent === null) {
      return 0;
    } else if (parent.left === root) {
      return root.val;
    }
  }
  return sumOfLeftLeaves(root.left, root) + sumOfLeftLeaves(root.right, root);
};