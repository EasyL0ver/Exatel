"General / Important
set nocompatible
set encoding=utf8
call pathogen#infect()
filetype plugin on
filetype indent on
set nomodeline

"General / Not important
set so=7
set history=700
set wildmenu
set ruler
set cmdheight=2
set hid
set backspace=eol,start,indent
set whichwrap+=<,>,h,l
set ignorecase
set smartcase
set hlsearch
set incsearch
set nolazyredraw
set magic
set showmatch

"Functionality changes
nnoremap ; :
nnoremap j gj
nnoremap k gk
nmap <F4> :w

"Editor
set relativenumber
set showmatch
set shiftwidth=2
set tabstop=2
set softtabstop=2
set expandtab
set smarttab
set autoindent
set smartindent
set wrap
set linebreak

"Colors
syntax on
set t_Co=256
colorscheme wombat256mod
set background=dark
set cursorline

if exists("+colorcolumn")
  set colorcolumn=81
  highlight ColorColumn ctermbg=236
endif

"Enable code folding
set foldenable
set foldmethod=indent
set foldlevel=99

"No sound on errors
set noerrorbells
set novisualbell
set t_vb=
set tm=500

"Disable all forms of backups
set nobackup
set nowritebackup
set noswapfile

"With a map leader it's possible to do extra key combinations
"like <leader>w saves the current file
let mapleader = ","
let g:mapleader = ","

"Moving around windows
map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

"Map JSON files to use all JS rules
au BufRead,BufNewFile,BufWrite {*.json} set ft=javascript