import java.util.Scanner;

/**
 *
 * @author Harlock
 */
public class graviton {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        final double graviton = 300000;
        Scanner entrada = new Scanner(System.in);
        System.out.println("Inserta la energia actual");
        double energiaActual = entrada.nextDouble();
        double energiaRestante = graviton - energiaActual;
        System.out.println("Inserta numero de satelites: ");
        double numSatelites = entrada.nextDouble();
        System.out.println("Inserta la energia por satelite: ");
        double energiaXSatelite = entrada.nextDouble();
        System.out.println();
        double calculoEnergiaSatelites = numSatelites * energiaXSatelite;
        double calculoEnergiaRestante = (graviton - energiaActual) - calculoEnergiaSatelites;
        double calculoSatelitesRestantes = calculoEnergiaRestante / energiaXSatelite;
        System.out.println("Energia necesaria: " + graviton);
        System.out.println("Energia actual: " + energiaActual);
        System.out.println("Energia restante: " + energiaRestante);
        System.out.println("Numero de satelites: " + numSatelites);
        System.out.println("Energia por satelite: " + energiaXSatelite);
        System.out.println("Energia total por satelites: " + calculoEnergiaSatelites);
        System.out.println("Satelites restantes: " + calculoSatelitesRestantes);
    }
}