#include <bits/stdc++.h>

using namespace std;
ifstream fin("arena.in");
ofstream fout("arena.out");
long long n,v[1000],nr;
int valid(int k)
{
    for(int i=1; i<=k-1; i++)
    {
        if(v[i]==1 && v[i-1]==1) return 0;
        if(v[i]==1 && v[i-2]==1) return 0;
        if(v[i]==1 && v[i+1]==1) return 0;
        if(v[i]==1 && v[i+2]==1) return 0;
        if(v[i]==2 && v[i-1]==3) return 0;
        if(v[i]==2 && v[i+1]==3) return 0;
        if(v[i]==3 && v[i-1]==2) return 0;
        if(v[i]==4 && v[i+1]==4) return 0;
        if(v[i]==4 && v[i-1]==4) return 0;
        if(v[i]==4 && v[i+1]==3) return 0;
        if(v[i]==3 && v[i-1]==4) return 0;
    }
    return 1;
}
int solutie(int k)
{
    if(k==n) return 1;
    return 0;
}
void afisare(int k)
{
    for(int i=1; i<=k; i++) fout<<v[i]<<" ";
    fout<<endl;
}
void back(int k)
{
    for(int i=1; i<=4; i++)
    {
        v[k]=i;
        if(valid(k)==1)
            if(solutie(k)==1)
            {
                int ok=1;
                if(v[k]==1 && v[k-1]==1) ok=0;
                if(v[k]==1 && v[k-2]==1) ok=0;
                if(v[k]==2 && v[k-1]==3) ok=0;
                if(v[k]==3 && v[k-1]==2) ok=0;
                if(v[k]==4 && v[k-1]==4) ok=0;
                if(v[k]==3 && v[k-1]==4) ok=0;
                if(ok==1) nr++;
            }
            else back(k+1);
    }
}
int main()
{
    fin>>n;
    back(1);
    fout<<nr;
    return 0;
}