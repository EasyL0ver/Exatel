import PyPDF2 as pdf
import random
def dictionary(filename):
        top100 = open("top100.txt", "r")
        pass_list = []
        pass_list = top100.read().splitlines()
        pass_list = pass_list
        print("Testing the top 100 most common passwords:",pass_list)
        correct_pass = False
        reader = pdf.PdfFileReader(filename)
        for password in pass_list:
            try:
                print("trying:", password)
                reader.decrypt(password)
                print(password, "is right the document contains", reader.numPages,"pages")
                break
            except MemoryError:
                print ("not enough memory")
           # except:
            #    print (password,"is wrong")