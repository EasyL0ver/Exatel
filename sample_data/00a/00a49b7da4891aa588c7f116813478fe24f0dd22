while True:
    print("Mein Calc: ")
    print("addieren")
    print("dividieren")
    print("multiplizieren")
    print("subtrahieren")
    print("quit")
    input = input(": ")

    if input == "quit":
        break
    elif input == "addieren":
        num1 = float(input("hier bitte die erste nummer eingeben"))
        num2 = float(input("hier bitte die zweite nummer eingeben"))
        result = str(num1 + num2)
        print("das Ergebnis lautet" + result)