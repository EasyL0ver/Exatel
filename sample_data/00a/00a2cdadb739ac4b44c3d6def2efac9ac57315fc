# This may ruin someone's day

fakeSemicolon = "Í¾" # U+037E
realSemicolon = ";" # U+003B
import os

filePath = "" # Specify this
originalText = open(filepath, "r").read()
brokenText = originalText.replace(realSemicolon, fakeSemicolon)
os.remove(filePath)
newFile = open(filepath, "w+")
newFile.write(brokenText)
newFile.close()
