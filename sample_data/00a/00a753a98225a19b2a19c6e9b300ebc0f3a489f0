var skillsLimit = 3,
    keepPushingYourSelf = true,
    upgardeYourSkills = 0;

while (keepPushingYourSelf){
    if(skillsLimit >= upgardeYourSkills){
        upgardeYourSkills += 1;
        console.log(`You have gained a skill points equal to ${upgardeYourSkills}`);
    }
    else {
        keepPushingYourSelf = false;
    }
}
if (skillsLimit <= Number.MAX_SAFE_INTEGER) {
    console.log(`You have estimated your skill limits really low`);
}