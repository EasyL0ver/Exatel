'use strict'
/** @typedef {import('@adonisjs/framework/src/Request')} Request */
/** @typedef {import('@adonisjs/framework/src/Response')} Response */
/** @typedef {import('@adonisjs/framework/src/View')} View */

class RefreshUserToken {
  /**
   * @param {object} ctx
   * @param {Request} ctx.request
   * @param {Function} next
   */
  async handle ({ request, response, auth }, next) {
    // call next to advance the request

    const refreshToken = request.header('refreshToken');
	const token = await auth.newRefreshToken()
	  			.generateForRefreshToken(refreshToken);
	  			
	response.header('Authorization', token.token);
	response.header('refreshToken',  token.refreshToken);

    await next();
  }
}

module.exports = RefreshUserToken;