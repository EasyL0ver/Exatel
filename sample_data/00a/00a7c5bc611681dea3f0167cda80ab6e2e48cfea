#! /bin/bash

cur() {
	case "$1" in 
	"here" | "h")
		echo $(pwd) > $HOME/.cur;
		;;
	"set" | "s" )
		echo "$2" > $HOME/.cur;
		;;
	"go" | "g" )
		cd "$(cat $HOME/.cur)";
		;;
	"delete" | "d" )
		rm $HOME/.cur;
		;;
	"print" | "p" )
		echo "$(cat $HOME/.cur)";
		;;
	"env" | "e" )
		case "$2" in 
		"" )
			source $(cat $HOME/.cur_env)
			;;
		"here" | "h" )
			echo "$(pwd)/$(find . -path '*/bin/*' -name activate -printf '%P')" > $HOME/.cur_env
			;;
		"delete" | "d" )
			rm $HOME/.cur_env
			;;
		"print" | "p" )
			echo "$(cat $HOME/.cur_env)"
			;;
		esac
	esac
}