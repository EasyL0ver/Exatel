#include <bits/stdc++.h>
using namespace std;



int main(){
    ios::sync_with_stdio(false);
    int n , m , ans=0;
    cin>>n>>m;
    char **x = new char*[n];
    for(int i=0; i<n; i++)
    {
        x[i]=new char [m];
    }
    for(int i=0; i<n; i++){
        cout<<1;
        for(int j=0; j<m; j++){
            cin>>x[i][j];
        }
    }
    for(int i=0; i<n; i++)
        for(int j=0; j<m; j++)
        {
            if(x[i][j]=='W')
            {
                if(x[i+1][j]=='P' && i!=n-1) ans++;
                else if(x[i-1][j]=='P' && i!=0) ans++;
                else if(x[i][j+1]=='P' && j!=m-1) ans++;
                else if(x[i][j-1]=='P' && j!=0) ans++;
            }
        }
    cout<<ans<<endl;
}