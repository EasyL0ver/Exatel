int main(int argc, char** args)
{

	sqlite3* connection;
	sqlite3_stmt *statement = NULL;

	int temp=1;
	char input[22];
	char* tmp;
	char prikaz2 [100];

	if(argc==2)
	{
		temp = sqlite3_open(args[1], &connection);
		

		if (temp==SQLITE_ERROR)
		{

			fprintf(stderr, "CHYBA: Nepodarilo sa otvotir databazu. \n" );
			sqlite3_close(connection);
			return 1;
		}

		temp = sqlite3_exec(connection, "CREATE TABLE IF NOT EXISTS database (name TEXT, value INTEGER);", 0, 0, 0);

	}
	else
	{

		fprintf(stderr, "CHYBA: Zly pocet vstupnych parametrov. \n" );
		return 1;
	}