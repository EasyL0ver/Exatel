// a short implementation without rank
class UnionFind {
  int[] fa;
  
  UnionFind(int size) {
    fa = new int[size];
    for(int i = 0; i < size; fa[i] = i++);
  }
  
  void union(int x, int y) {
    fa[find(x)] = find(y);
  }
  
  int find(int x) {
    return x != fa[x] ? fa[x] = find(fa[x]) : x;
  }
}