        //Do zadania 4
        static int policzWystapienia(int[] tab, int liczbaDoPoliczenia)
        {
            int licznik = 0;
            for (int i = 0; i < tab.Length; i++)
            {
                if (tab[i] == liczbaDoPoliczenia)
                {
                    licznik++;
                }
            }
            
            return licznik;
        }


