if (isset($_POST)&&is_array($_POST)&&count($_POST)>0) {

    $erro = false;
    $obrigatorio = array('ncorridas','nome','email','campoResultado','msg');
    foreach ($_POST as $campo => $valor) {
        if (in_array($campo, $obrigatorio)&&empty($valor)) $erro = true;
        $$campo = $valor;
    }

    if (!$erro) {

        $mensagem = "
        <html>
        <body>
        <table>
        <tr><td>Numero de corridas por dia: </td><td>$ncorridas</td></tr>
        <tr><td>Nome completo: </td><td>$nome</td></tr>
        <tr><td>Email corporativo: </td><td>$email</td></tr>
        <tr><td>Sua empresa pode economizar até: </td><td>$campoResultado</td></tr>
        </table>
        </body>
        </html>";

        require 'phpmailer/PHPMailerAutoload.php';

        $mail = new PHPMailer;

        $mail->setFrom('jean@americoimoveisltda.com.br', 'Economizar | Ligue-Taxi');
        $mail->addAddress('jean@americoimoveisltda.com.br');
        $mail->addAddress('jean@americoimoveisltda.com.br');
        $mail->Subject = 'Contato pelo Site: '. $nome;
        $mail->msgHTML( $mensagem );
        $mail->AltBody = strip_tags( $mensagem );

        if ($mail->send()) {
            $alert = array(
                'tipo' => 'success',
                'msg' => 'Seu e-mail foi enviado com sucesso!'
            );
        } else {
            $alert = array(
                'tipo' => 'danger',
                'msg' => 'Não foi possivel enviar seu contato, tente novamente mais tarde!'
            );
        }

    } else {
        $alert = array(
            'tipo' => 'danger',
            'msg' => 'há campos obrigatórios que não foi preenchido. Por favor, verificar e enviar novamente!'
        );
    }
}

?>
