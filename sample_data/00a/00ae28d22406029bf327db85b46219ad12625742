SELECT products.ID, products.menu_order, products.post_type, products.post_id, products.meta_key,  products.meta_value
FROM (
 (SELECT p1.ID, p1.menu_order, p1.post_type, m1.post_id, m1.meta_key,  m1.meta_value
  FROM `wp_posts` p1
  INNER JOIN `wp_postmeta` m1 ON `post_id`=`id`
  where `post_type`='product'  and (`meta_key`='additional_sizes' or `meta_key`='additional_colors') and `meta_value` <> ''
  group by `meta_value`)

  union

 (SELECT p2.ID, p2.menu_order, p2.post_type, m2.post_id, m2.meta_key,  m2.meta_value
  FROM wp_posts p2
  INNER JOIN wp_postmeta m2 ON m2.post_id=p2.id
  where p2.post_type='product' and (`meta_key`='additional_sizes' or `meta_key`='additional_colors') and `meta_value`=''
  #group by wp_posts.id
)) products
group by products.ID
order by `menu_order`
LIMIT 0, 10