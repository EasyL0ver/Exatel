package latihan;

import java.util.Scanner;
public class Latihan3A {
    public static void main(String[] args) {
        Scanner scn = new Scanner (System.in);
        System.out.print("Masukkan bilangan desimal : ");
        int bil = scn.nextInt();
        System.out.print("Hasil nilai biner : " +baseString(bil, 2) +"\n");
        System.out.print("Hasil nilai oktal : " +baseString(bil, 8) +"\n");
        System.out.print("Hasil nilai heksadesimal : "+baseString (bil, 16) +"\n");
    }
    public static String baseString(int num, int b){
        String digitChar = "0123456789ABCDEF", numStr="";
        Latihan3 <Character> stk = new Latihan3 <Character>();
        do{
            stk.push(digitChar.charAt(num%b));
            num /= b;
        } while (num != 0);
        while (!stk.isEmpty()){
        numStr += stk.pop().charValue();
        }
        return numStr;
    }
}