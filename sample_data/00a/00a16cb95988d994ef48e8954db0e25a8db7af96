using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace Aufgabe3
{
    class Program
    {
        static void Main(string[] args)
        {
            string filename = "output.txt"; //name der ausgabedatei
            int zeilen; //anzahl der zeilen in der eingabedatei input.txt

            //oeffnen der eingabedatei input.txt:
            //benutzen einer klasse namens sr, die den typ System.IO.StreamReader (vorgefertigter klassentyp zum 
            //lesen aus dateien etc.) hat und den "wert" System.IO.File.OpenText(input.txt) (d.h. der klasse sr wird 
            //das objekt/die datei input.txt zugeordnet):
            using (System.IO.StreamReader sr = System.IO.File.OpenText(input.txt)) //entspricht quasi einer deklaration
            {
                zeilen = 0;
                string s; //varible zum testen, ob die datei zu ende gelesen wurde
                //speichern der ersten bzw. nächsten zeile aus der einbgabedatei input.txt in der variable s,
                //wenn die zeile nicht leer ist, wird die anzahl der zeilen um eins erhöht:
                while ((s = sr.ReadLine()) != null)
                {
                    zeilen = zeilen + 1;
                }
            }
        }
    }
}